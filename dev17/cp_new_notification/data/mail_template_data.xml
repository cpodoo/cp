<?xml version="1.0"?>
<odoo>
    <data noupdate="1">
        <record id="email_template_new_notification" model="mail.template">
            <field name="name">New Notification Activated</field>
            <field name="model_id" ref="cp_new_notification.model_new_update_notification"/>
            <field name="email_from">noreply@example.com</field>
            <field name="partner_to">{{ object.user_notification_ids[0].user.partner_id.email }}</field>
            <field name="subject">You have a new active notification: {{ object.name }}</field>
            <field name="body_html" type="html">
                <div style="margin: 0; padding: 0; font-family: 'Arial', sans-serif; font-size: 14px;">
                    <p>Hello,</p>
                    <p>A new notification titled
                        <strong>{{ object.name }}</strong> is now active.
                    </p>
                    <p><strong>Description:</strong><br/>{{ object.description }}</p>
                    <p>Thank you!</p>
                    <t t-if="not is_html_empty(user.signature)">
                        <br/><br/>
                        <t t-out="user.signature or ''"/>
                    </t>
                </div>
            </field>
            <field name="lang">{{ object.user_notification_ids[0].user.partner_id.lang }}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>
