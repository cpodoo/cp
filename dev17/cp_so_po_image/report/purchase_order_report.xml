<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Purchase Order Report -->
    <template id="purchase_report_inherit_id" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//thead[1]" position="replace">
            <thead>
                <t t-set="show_image"
                   t-value="env['ir.config_parameter'].sudo().get_param('cp_so_po_image.purchase_product_image_report')"/>
                <tr>
                    <th class="text-start" style="width: 3%;">No.</th>
                    <th class="text-start">Description</th>
                    <t t-if="show_image">
                        <th class="text-center" style="width: 10%;">Image</th>
                    </t>
                    <t t-if="not show_image">
                        <th class="text-center" style="width: 10%;"></th>
                    </t>
                    <th class="text-center">Date Req.</th>
                    <th class="text-end">Qty</th>
                    <th class="text-end">Unit</th>
                    <th class="text-end">Unit Price</th>
                    <th class="text-end">Discount (%)</th>
                    <th class="text-end">Disc. Price</th>
                    <th class="text-end">Taxes</th>
                    <th class="text-end">Amount</th>
                </tr>
            </thead>
        </xpath>
        <xpath expr="//tbody[1]" position="replace">
            <tbody>
                <t t-set="show_image"
                   t-value="env['ir.config_parameter'].sudo().get_param('cp_so_po_image.purchase_product_image_report')"/>
                <t t-set="seq" t-value="1"/>
                <t t-set="current_subtotal" t-value="0"/>
                <t t-foreach="o.order_line" t-as="line" t-index="line_index">
                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"/>
                    <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                        <t t-if="not line.display_type">
                            <td class="text-start">
                                <t t-esc="seq"/>
                                <t t-set="seq" t-value="seq + 1"/>
                            </td>
                            <td class="text-start">
                                <span t-field="line.name"/>
                            </td>
                            <t t-if="show_image">
                                <td class="text-center">
                                    <span t-if="line.product_id.image_128"
                                          t-field="line.product_id.image_128"
                                          t-options='{"widget": "image", "width": 50}'/>
                                </td>
                            </t>
                            <t t-if="not show_image">
                                <td class="text-center"></td>
                            </t>
                            <td class="text-center">
                                <span t-field="line.date_planned"/>
                            </td>
                            <td class="text-end">
                                <span t-field="line.product_qty"/>
                            </td>
                            <td class="text-end">
                                <span t-field="line.product_uom"/>
                            </td>
                            <td class="text-end">
                                <span t-field="line.price_unit"/>
                            </td>
                            <td class="text-end">
                                <span t-field="line.discount"/>%
                            </td>
                            <td class="text-end">
                                <t t-set="discounted_price"
                                   t-value="line.price_unit * (1 - (line.discount or 0.0)/100)"/>
                                <span t-esc="'%.2f' % discounted_price"/>
                            </td>
                            <td class="text-end">
                                <t t-set="taxes"
                                   t-value="', '.join([(tax.invoice_label or tax.name) for tax in line.taxes_id])"/>
                                <span t-out="taxes"/>
                            </td>
                            <td class="text-end">
                                <span t-field="line.price_subtotal"
                                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </t>
                        <t t-if="line.display_type == 'line_section'">
                            <td colspan="99">
                                <span t-field="line.name"/>
                            </td>
                            <t t-set="current_section" t-value="line"/>
                            <t t-set="current_subtotal" t-value="0"/>
                        </t>
                        <t t-if="line.display_type == 'line_note'">
                            <td colspan="99">
                                <span t-field="line.name"/>
                            </td>
                        </t>
                    </tr>
                    <t t-if="current_section and (line_index + 1 == len(o.order_line) or o.order_line[line_index+1].display_type == 'line_section')">
                        <tr class="is-subtotal text-end">
                            <td colspan="99">
                                <strong class="mr16">Subtotal</strong>
                                <span t-esc="current_subtotal"
                                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                    </t>
                </t>
            </tbody>
        </xpath>
    </template>

    <!-- RFQ Report -->
    <template id="purchase_quotation_report_inherit_id" inherit_id="purchase.report_purchasequotation_document">
        <xpath expr="//thead/tr/th[@name='th_description']" position="before">
            <t t-set="show_image"
               t-value="env['ir.config_parameter'].sudo().get_param('cp_so_po_image.purchase_product_image_report')"/>
            <th class="text-start">No.</th>
        </xpath>
        <xpath expr="//thead/tr/th[@name='th_description']" position="after">
            <t t-if="show_image">
                <th class="text-start">Image</th>
            </t>
            <t t-if="not show_image">
                <th class="text-start"></th>
            </t>
            <th class="text-end">Confirmation Date</th>
            <th class="text-end">Qty</th>
            <th class="text-end">Unit</th>
            <th class="text-end">Unit Price</th>
            <th class="text-end">Subtotal</th>
        </xpath>
        <xpath expr="//tbody[1]" position="replace">
            <tbody>
                <t t-set="show_image"
                   t-value="env['ir.config_parameter'].sudo().get_param('cp_so_po_image.purchase_product_image_report')"/>
                <t t-set="seq" t-value="1"/>
                <t t-foreach="o.order_line" t-as="line">
                    <tr>
                        <td class="text-start">
                            <t t-esc="seq"/>
                            <t t-set="seq" t-value="seq + 1"/>
                        </td>
                        <td class="text-start">
                            <span t-field="line.name"/>
                        </td>
                        <t t-if="show_image">
                            <td class="text-center">
                                <span t-if="line.product_id.image_128"
                                      t-field="line.product_id.image_128"
                                      t-options='{"widget": "image", "width": 50, "height": 50}'/>
                            </td>
                        </t>
                        <t t-if="not show_image">
                            <td class="text-center"></td>
                        </t>
                        <td class="text-end">
                            <span t-field="line.date_planned"/>
                        </td>
                        <td class="text-end">
                            <span t-field="line.product_qty"/>
                        </td>
                        <td class="text-end">
                            <span t-field="line.product_uom"/>
                        </td>
                        <td class="text-end">
                            <span t-field="line.price_unit"/>
                        </td>
                        <td class="text-end">
                            <span t-field="line.price_subtotal"/>
                        </td>
                    </tr>
                </t>
            </tbody>
        </xpath>
    </template>
</odoo>