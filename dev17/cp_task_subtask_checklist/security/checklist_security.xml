<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record model="ir.module.category" id="module_category_checklist">
            <field name="name">Checklist</field>
            <field name="description">Checklist Access Rights</field>
            <field name="sequence">20</field>
        </record>

        <record id="group_checklist_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_checklist"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">User access level for Project Checklists.</field>
        </record>

        <record id="group_checklist_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_checklist"/>
            <field name="implied_ids" eval="[(4, ref('group_checklist_user')), (4, ref('project.group_project_manager'))]"/>
            <field name="comment">Manager access level for Project Checklists (includes Project Manager rights).</field>
        </record>

        <record id="group_checklist_task_progress_restriction" model="res.groups">
            <field name="name">Checklist Task Progress Restriction (Legacy/Config)</field>
            <field name="category_id" ref="base.module_category_services_project"/>
            <field name="comment">This group is no longer the primary control for task stage restriction enforcement (see stage configuration). It might control configuration access.</field>
       </record>

    </data>
</odoo>




