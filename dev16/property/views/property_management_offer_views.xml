<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- tree View -->
    <record id="property_management_offer_view_tree" model="ir.ui.view">
        <field name="name">property.management.offer.tree</field>
        <field name="model">property.management.offer</field>
        <field name="arch" type="xml">
            <tree string="Stages" editable="top"
                  decoration-success="status in ['accepted']"
                  decoration-danger="status in ['refused']">
                <field name="offer_price" string="Offer Price"/>
                <field name="partner_id" string="Partner"/>
                <field name="validity" string="Validity (days)"/>
                <field name="offer_deadline" string="Deadline"/>
                <field name="expected_start_date"/>
                <button name="property_management_offer_action_accept"
                        string="Accept"
                        type="object"
                        icon="fa-check"
                        attrs="{'invisible': [('status', 'in', ['accepted','refused'])]}"/>
                <button name="property_management_offer_action_refuse"
                        string="Refuse"
                        type="object"
                        icon="fa-times"
                        attrs="{'invisible': [('status', 'in', ['accepted','refused'])]}"/>
                <field name="status" string="Status" optional="1" attrs="{'invisible': True}"/>
            </tree>
        </field>
    </record>
    <!-- Form View -->
    <record id="property_management_offer_view_form" model="ir.ui.view">
        <field name="name">property.management.offer.form</field>
        <field name="model">property.management.offer</field>
        <field name="arch" type="xml">
            <form string="Group">
                <sheet>
                    <group>
                        <field name="offer_price" string="Price"/>
                        <field name="partner_id" string="Partner"/>
                        <field name="validity" string="Validity(days)"/>
                        <field name="offer_deadline" string="Deadline"/>
                        <field name="status" string="Status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>