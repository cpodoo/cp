<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sale_report_inherit_id" inherit_id="sale.report_saleorder_document">
        <xpath expr="//table[1]/thead/tr[1]/th[1]" position="after">
            <th t-if="env['ir.config_parameter'].sudo().get_param('cp_so_po_image.sale_product_image_report')"
                name="image" class="text-start">Image
            </th>
        </xpath>
        <xpath expr="//tr/th[@name='th_description']" position="before">
            <th name="num" class="text-start">No.</th>
        </xpath>
        <xpath expr="//table[1]/tbody/t[2]/tr[1]/t[1]/td[1]" position="after">
            <t t-if="env['ir.config_parameter'].sudo().get_param('cp_so_po_image.sale_product_image_report')">
                <td class="text-right">
                    <img t-if="line.product_id.image_128" t-att-src="image_data_uri(line.product_id.image_128)"
                         style="width: 90px; height: auto;"/>
                </td>
            </t>
        </xpath>
        <xpath expr="//table[hasclass('o_main_table')]/tbody/t/tr/t/td[1]" position="before">
            <td>
                <span t-field="line.seq_no"/>
            </td>
        </xpath>
    </template>
</odoo>