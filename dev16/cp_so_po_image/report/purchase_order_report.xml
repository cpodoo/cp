<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Purchase Order Report -->
    <template id="purchase_report_inherit_id" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//table" position="before">
            <t t-set="config_parameter"
               t-value="request.env['ir.config_parameter'].sudo().get_param('cp_so_po_image.purchase_product_image_report')"/>
        </xpath>
        <xpath expr="//thead/tr/th[@name='th_description']" position="before">
            <th class="text-start">No.</th>
        </xpath>
        <xpath expr="//thead/tr/th[@name='th_description']" position="after">
            <t t-if="config_parameter">
                <th class="text-center">Image</th>
            </t>
            <th class="text-end">Confirmation Date</th>
            <th class="text-end">Qty</th>
            <th class="text-end">Unit</th>
            <th class="text-end">Unit Price</th>
            <th class="text-end">Subtotal</th>
        </xpath>
        <xpath expr="//tbody[1]" position="replace">
            <tbody>
                <t t-set="seq" t-value="1"/>
                <t t-foreach="o.order_line" t-as="line">
                    <tr>
                        <td class="text-start">
                            <t t-esc="seq"/>
                            <t t-set="seq" t-value="seq + 1"/>
                        </td>
                        <td class="text-start">
                            <span t-field="line.name"/>
                        </td>
                        <t t-if="config_parameter">
                            <td class="text-center">
                                <span t-if="line.product_id.image_128"
                                      t-field="line.product_id.image_128"
                                      t-options='{"widget": "image", "width": 50}'/>
                            </td>
                        </t>
                        <td class="text-end">
                            <span t-field="line.date_planned"/>
                        </td>
                        <td class="text-end">
                            <span t-field="line.product_qty"/>
                        </td>
                        <td class="text-end">
                            <span t-field="line.product_uom"/>
                        </td>
                        <td class="text-end">
                            <span t-field="line.price_unit"/>
                        </td>
                        <td class="text-end">
                            <span t-field="line.price_subtotal"
                                  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                        </td>
                    </tr>
                </t>
            </tbody>
        </xpath>
    </template>

