<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Purchase Order Report -->
    <template id="purchase_report_inherit_id" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//table" position="before">
            <t t-set="show_image"
               t-value="env['ir.config_parameter'].sudo().get_param('cp_so_po_image.purchase_product_image_report')"/>
        </xpath>
        <xpath expr="//thead/tr/th[@name='th_description']" position="before">
            <th class="text-start">No.</th>
        </xpath>
        <xpath expr="//thead/tr/th[@name='th_description']" position="after">
            <t t-if="show_image">
                <th class="text-start">Image</th>
            </t>
        </xpath>
        <xpath expr="//tbody[1]" position="replace">
            <tbody>
                <t t-set="seq" t-value="1"/>
                <t t-foreach="o.order_line" t-as="line">
                    <tr style="vertical-align: middle;">
                        <td class="text-start" style="width: 3%;">
                            <t t-esc="seq"/>
                            <t t-set="seq" t-value="seq + 1"/>
                        </td>
                        <td class="text-start" style="width: 25%;">
                            <span t-field="line.name"/>
                        </td>
                        <t t-if="show_image">
                            <td class="text-center" style="width: 10%;">
                                <span t-if="line.product_id.image_128"
                                      t-field="line.product_id.image_128"
                                      t-options='{"widget": "image", "width": "50px"}'/>
                            </td>
                        </t>
                        <td class="text-end" style="width: 10%;">
                            <span t-field="line.taxes_id"/>
                        </td>
                        <td class="text-end" style="width: 12%;">
                            <span t-field="line.date_planned"/>
                        </td>
                        <td class="text-end" style="width: 5%;">
                            <span t-field="line.product_qty"/>
                        </td>
                        <td class="text-end" style="width: 10%;">
                            <span t-field="line.price_unit"/>
                        </td>
                        <td class="text-end" style="width: 10%;">
                            <span t-field="line.price_subtotal"/>
                        </td>
                    </tr>
                </t>
            </tbody>
        </xpath>
    </template>

    <!-- RFQ Report -->
    <template id="purchase_quotation_report_inherit_id" inherit_id="purchase.report_purchasequotation_document">
        <xpath expr="//table" position="before">
            <t t-set="show_image"
               t-value="env['ir.config_parameter'].sudo().get_param('cp_so_po_image.purchase_product_image_report')"/>
        </xpath>
        <xpath expr="//thead/tr/th[@name='th_description']" position="before">
            <th class="text-start">No.</th>
        </xpath>
        <xpath expr="//thead/tr/th[@name='th_description']" position="after">
            <t t-if="show_image">
                <th class="text-start">Image</th>
            </t>
            <th class="text-end">Confirmation Date</th>
            <th class="text-end">Qty</th>
            <th class="text-end">Unit</th>
            <th class="text-end">Unit Price</th>
            <th class="text-end">Subtotal</th>
        </xpath>
        <xpath expr="//tbody[1]" position="replace">
            <tbody>
                <t t-foreach="enumerate(o.order_line)" t-as="item">
                    <tr>
                        <td class="text-start">
                            <t t-esc="item[0] + 1"/>
                        </td>
                        <td class="text-start">
                            <span t-field="item[1].name"/>
                        </td>
                        <t t-if="show_image">
                            <td class="text-center" style="width: 10%;">
                                <span t-if="item[1].product_id.image_128"
                                      t-field="item[1].product_id.image_128"
                                      t-options='{"widget": "image", "width": "50px"}'/>
                            </td>
                        </t>
                        <td class="text-end">
                            <span t-field="item[1].date_planned"/>
                        </td>
                        <td class="text-end">
                            <span t-field="item[1].product_qty"/>
                        </td>
                        <td class="text-end">
                            <span t-field="item[1].product_uom"/>
                        </td>
                        <td class="text-end">
                            <span t-field="item[1].price_unit"/>
                        </td>
                        <td class="text-end">
                            <span t-field="item[1].price_subtotal"/>
                        </td>
                    </tr>
                </t>
            </tbody>
        </xpath>
    </template>
</odoo>