<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_config_settings_inherit_cp_sale_image" model="ir.ui.view">
        <field name="name">res.config.settings.inherit.cp.sale.image</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='quotation_order_setting_container']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="sale_product_image_setting">
                    <div class="o_setting_left_pane">
                        <field name="sale_product_image_report"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="sale_product_image_report"/>
                        <div class="text-muted">
                            Show product images in printed sale reports
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>