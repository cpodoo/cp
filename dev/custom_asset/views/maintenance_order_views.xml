<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_maintenance_order_tree" model="ir.ui.view">
        <field name="name">maintenance.order.tree</field>
        <field name="model">maintenance.order</field>
        <field name="arch" type="xml">
            <list>
                <field name="maintenance_order_no"/>
                <field name="assigned_to"/>
                <field name="warehouse_id"/>
                <field name="scheduled_date"/>
                <field name="stage"/>
                <field name="priority"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_maintenance_order_form" model="ir.ui.view">
        <field name="name">maintenance.order.form</field>
        <field name="model">maintenance.order</field>
        <field name="arch" type="xml">
            <form string="Maintenance Order">
                <header>
                    <button name="action_schedule" string="Schedule" type="object" class="btn-primary"/>
                    <button name="action_start_maintenance" string="Start Maintenance" type="object"
                            class="btn-primary"/>
                    <button name="action_complete_maintenance" string="Complete" type="object" class="btn-success"
                            state="in_progress"/>
                    <button name="action_cancel_maintenance" string="Cancel" type="object" class="btn-secondary"
                            state="draft,scheduled,in_progress"/>
                    <field name="stage" widget="statusbar" statusbar_visible="draft,scheduled,in_progress,completed"/>
                </header>
                <sheet>
                    <!-- Title with Maintenance Order No -->
                    <div class="oe_title">
                        <h1>
                            <field name="maintenance_order_no" readonly="1"/>
                        </h1>
                    </div>

                    <!-- Asset & Location Info -->
                    <group>
                        <group name="asset_info" string="Asset Information">
                            <field name="current_reading"/>
                        </group>

                        <group name="location_info" string="Location Information">
                            <field name="warehouse_id"/>
                            <field name="current_location"/>
                        </group>
                    </group>

                    <!-- Schedule & Maintenance Info -->
                    <group>
                        <group name="schedule_info" string="Schedule Information">
                            <field name="scheduled_date"/>
                            <field name="planned_date"/>
                            <field name="actual_date"/>
                            <field name="assigned_to"/>
                        </group>

                        <group name="maintenance_info" string="Maintenance Information">
                            <field name="maintenance_type"/>
                            <field name="priority"/>
                            <field name="owner_id"/>
                        </group>
                    </group>

                    <!-- Notebook Tabs -->
                    <notebook>
                        <page string="Remarks and Findings" name="remarks">
                            <field name="remarks_note"/>
                        </page>

                        <page string="Tab-Line-Maintenance Tasklist" name="tasks">
                            <field name="task_ids" widget="one2many">
                                <list editable="bottom" string="Tasks">
                                    <field name="product_id"/>
                                    <field name="name"/>
                                    <field name="activity_type"/>
                                    <field name="quantity"/>
                                    <field name="status"/>
                                    <field name="remarks"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_maintenance_order" model="ir.actions.act_window">
        <field name="name">Maintenance Orders</field>
        <field name="res_model">maintenance.order</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first maintenance order
            </p>
        </field>
    </record>
</odoo>
