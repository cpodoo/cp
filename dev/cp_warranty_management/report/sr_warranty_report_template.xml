<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- Warranty Template -->
        <template id="warranty_template">
            <table class="table table-sm table-bordered o_main_table" style="border: 1px solid black;">
                <thead style="background-color: #f2f2f2;"> 
                    <tr class="border-black">
                        <th name="th_name" class="text-center" style="border: 1px solid black;">
                            <span>Name</span>
                        </th>
                        <th name="th_date" class="text-center" style="border: 1px solid black;">
                            <span>Warranty Date</span>
                        </th>
                        <th name="th_customer" class="text-center" style="border: 1px solid black;">
                            <span>Customer</span>
                        </th>
                        <th name="th_product" class="text-center" style="border: 1px solid black;">
                            <span>Product</span>
                        </th>
                        <t t-if="is_product_code">
                            <th name="th_product_code" class="text-center" style="border: 1px solid black;">
                                <span>Product Code</span>
                            </th>
                        </t>
                        <t t-if="is_product_number">
                            <th name="th_serial_number" class="text-center" style="border: 1px solid black;">
                                <span>Serial Number</span>
                            </th>
                        </t>
                        <th name="th_start_date" class="text-center" style="border: 1px solid black;">
                            <span>Start Date</span>
                        </th>
                        <th name="th_end_date" class="text-center" style="border: 1px solid black;">
                            <span>End Date</span>
                        </th>
                        <th name="th_SO" class="text-center" style="border: 1px solid black;">
                            <span>Sale Order</span>
                        </th>
                        <th name="th_state" class="text-center" style="border: 1px solid black;">
                            <span>State</span>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="warranty_ids" t-as="warranty_id">
                        <tr>
                            <td class="text-center" style="border: 1px solid black;">
                                <span t-esc="warranty_id.name"/>
                            </td>
                            <td class="text-center" style="border: 1px solid black;">
                                <span t-esc="warranty_id.warranty_date"/>
                            </td>
                            <td class="text-center" style="border: 1px solid black;">
                                <span t-esc="warranty_id.partner_id.name"/>
                            </td>
                            <td class="text-center" style="border: 1px solid black;">
                                <span t-esc="warranty_id.product_id.name"/>
                            </td>
                            <t t-if="is_product_code">
                                <t t-if="warranty_id.product_ref_code">
                                    <td class="text-center">
                                        <span t-esc="warranty_id.product_ref_code"/>
                                    </td>
                                </t>
                                <t t-if="not warranty_id.product_ref_code">
                                    <td class="text-center">
                                        <span> - </span>
                                    </td>
                                </t>
                            </t>
                            <t t-if="is_product_number">
                                <t t-if="warranty_id.serial_number">
                                    <td class="text-center">
                                        <span t-esc="warranty_id.serial_number"/>
                                    </td>
                                </t>
                                <t t-if="not warranty_id.serial_number">
                                    <td class="text-center">
                                        <span> - </span>
                                    </td>
                                </t>
                            </t>
                            <td class="text-center" style="border: 1px solid black;">
                                <span t-esc="warranty_id.start_date"/>
                            </td>
                            <td class="text-center" style="border: 1px solid black;">
                                <span t-esc="warranty_id.end_date"/>
                            </td>
                            <td class="text-center" style="border: 1px solid black;">
                                <span t-esc="warranty_id.sale_order_id.name"/>
                            </td>
                            <td class="text-center" style="border: 1px solid black;">
                                <span t-esc="dict(warranty_id.fields_get(allfields=['state'])['state']['selection'])[warranty_id.state]"/>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </template>

        <!-- Warranty Report Template -->
        <template id="sr_warranty_report_template">
            <t t-call="web.html_container">
                <t t-call="web.internal_layout">
                    <div class="page">
                        <div class="text-center mb-4">
                            <h3>
                                <strong>
                                    <span>Product Warranty Report</span>
                                </strong>
                            </h3>
                        </div>
                        <div class="row mb-4 justify-content-center"> 
                            <table class="table table-sm table-bordered o_main_table" style="border: 1px solid black;">
                                <thead style="background-color: #f2f2f2;">     
                                    <tr>
                                        <td class="text-center" style="border: 1px solid black;">
                                            <span>
                                                <strong>Start Date</strong>
                                            </span>
                                        </td>
                                        <td class="text-center" style="border: 1px solid black;">
                                            <span>
                                                <strong>End Date</strong>
                                            </span>
                                        </td>
                                        <t t-if="docs.state">
                                            <td class="text-center" style="border: 1px solid black;">
                                                <span>
                                                    <strong>State</strong>
                                                </span>
                                            </td>
                                        </t>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="text-center" style="border: 1px solid black;">
                                            <span t-field="docs.start_date"/>
                                        </td>
                                        <td class="text-center" style="border: 1px solid black;">
                                            <span t-field="docs.end_date"/>
                                        </td>
                                        <t t-if="docs.state">
                                            <td class="text-center">
                                                <span t-field="docs.state"/>
                                            </td>
                                        </t>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <t t-if="warranty_ids">
                            <div class="page">
                                <t t-call="cp_warranty_management.warranty_template" />
                            </div>
                        </t>
                        <t t-else="">
                            <div class="text-center mt-4" >
                                <span style="text-center">There is no data available</span>
                            </div>
                        </t>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
