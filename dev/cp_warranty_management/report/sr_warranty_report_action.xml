<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- sr Warranty report template actions -->
    <record id="sr_warranty_ir_actions_report" model="ir.actions.report">
        <field name="name">Warranty Report</field>
        <field name="model">sr.product.warranty</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">cp_warranty_management.sr_report_warranty</field>
        <field name="report_file">cp_warranty_management.sr_report_warranty</field>
