    </record>
    <record id="sr_product_warranty_report_action" model="ir.actions.report">
        <field name="name">Warranty Report</field>
        <field name="model">sr.warranty.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">cp_warranty_management.sr_warranty_report_template</field>
