    <template id="custom_sr_report">
        <t t-call="web.html_container">
            <div class="page">
                <!-- Report Title -->
                <div class="text-center" style="border: 2px solid black; background-color: #d3d3d3; padding: 5px;">
                    <h4 style="margin: 0; font-weight: bold; text-decoration: underline;">
                        Service Completion Report
                    </h4>
                </div>

                <!-- Basic Job Information -->
                <div style="margin-top: 20px; font-size: 16px;">
                    <p><strong>Reference No:</strong> <span t-out="o.sequence"/></p>
                    <p><strong>Customer Name:</strong> <span t-out="o.name"/></p>
                    <p><strong>Email:</strong> <span t-out="o.email"/></p>
                    <p><strong>Phone:</strong> <span t-out="o.phone"/></p>
                    <p><strong>Request Date:</strong> <span t-out="o.date"/></p>
                    <p><strong>Status:</strong> <span t-out="o.status"/></p>
                </div>

                <!-- Service Details Table -->
                <h4 style="margin-top: 30px; text-decoration: underline;">Service Details</h4>
                <table style="width: 100%; border-collapse: collapse; font-size: 15px; margin-top: 10px;">
                    <thead>
                        <tr style="background-color: #d3d3d3;">
                            <th style="border: 1px solid black; padding: 10px; text-align: left;">Product</th>
                            <th style="border: 1px solid black; padding: 10px; text-align: left;">Brand</th>
                            <th style="border: 1px solid black; padding: 10px; text-align: left;">Description</th>
                            <th style="border: 1px solid black; padding: 10px; text-align: right;">Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="o.request_line" t-as="line">
                            <tr>
                                <td style="border: 1px solid black; padding: 10px;">
                                    <span t-out="line.item_id.name"/>
                                </td>
                                <td style="border: 1px solid black; padding: 10px;">
                                    <span t-out="line.brand_id.name"/>
                                </td>
                                <td style="border: 1px solid black; padding: 10px;">
                                    <span t-out="line.description"/>
                                </td>
                                <td style="border: 1px solid black; padding: 10px; text-align: right;">
                                    <span t-out="line.price"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>

                <!-- Total Amount -->
                <div style="margin-top: 20px; text-align: right; font-size: 18px;">
                    <b>Total Amount:</b> <span t-out="o.total_amount"/>
                </div>
            </div>
        </t>
    </template>
    <template id="custom_sr_pdf_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="service_center.custom_sr_report"/>
            </t>
        </t>
    </template>
    <record id="action_service_request_report" model="ir.actions.report">
        <field name="name">Service Request Report</field>
        <field name="model">service.request</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">service_center.custom_sr_pdf_report</field>
        <field name="report_file">service_center.custom_sr_pdf_report</field>
        <field name="binding_model_id" ref="service_center.model_service_request"/>
        <field name="paperformat_id" ref="base.paperformat_euro"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
