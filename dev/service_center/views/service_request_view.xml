<odoo>
    <!-- Gantt View for Service Requests -->
    <record id="view_service_request_gantt" model="ir.ui.view">
        <field name="name">service.request.view.gantt</field>
        <field name="model">service.request</field>
        <field name="arch" type="xml">
            <gantt
                string="Service Requests"
                date_start="start_date"
                date_stop="end_date"
                default_group_by="status"
                progress="progress"
                default_scale="week"
                scales="day,week,month,year"
                precision="{'day': 'hour:full', 'week': 'day:full', 'month': 'day:full', 'year': 'day:full'}"
                color="priority">
                <field name="name"/>
                <field name="sequence"/>
                <field name="status"/>
                <field name="priority"/>
                <field name="progress"/>
            </gantt>
        </field>
    </record>

    <!--Tree veiw-->
    <record id="view_service_request_list" model="ir.ui.view">
        <field name="name">Service Request</field>
        <field name="model">service.request</field>
        <field name="arch" type="xml">
            <list>
                <field name="priority" optional="show" widget="priority" nolabel="1"/>
                <field name="sequence"/>
                <field name="name"/>
                <!--                <field name="customer_name"/>-->
                <field name="date"/>
                <!--                <field name="type"/>-->
                <field name="status"/>
            </list>
        </field>
    </record>

    <!--form-->
    <record id="view_service_request_from" model="ir.ui.view">
        <field name="name">Service Request</field>
        <field name="model">service.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="preview_service_request_report" type="object" string="Priview Layout"
                            class="oe_highlight"/>
                    <button name="send_email" type="object" string="Send Email" class="oe_highlight"/>
                    <button name="in_process" invisible="status in ['process','cancel','done']" class="oe_highlight"
                            string="In Progress" type="object"/>
                    <button name="cancel" invisible="status in ['cancel','scrap','done']" class="oe-primary"
                            string="Cancel" type="object"/>
                    <button name="scrap" invisible="status in ['scrap','process','done','new']" class="oe_highlight"
                            string="Scrap" type="object"/>
                    <button name="done" invisible="status in ['cancel','new','scrap','done']" class="oe_highlight"
                            string="Done" type="object"/>
                    <button name="duplicate_record" invisible="status in ['process','cancel','scrap','new']"
                            class="oe_highlight"
                            string="Re Progress" type="object"/>

                    <!--                    <button name="%(action_service_request)d" string="new Request" type="action" class="oe_highlight" />-->
                    <!--                    <button name="%(purchase.purchase_rfq)d" string="open PO tree view" type="action" class="oe_highlight" />-->
                    <!--                    <button name="%(sale.action_quotations_with_onboarding)d" string="open SO tree view" type="action" class="oe_highlight" />-->
                    <button name="%(action_planning_months)d" string="Create Planning Month" type="action"
                            class="btn-primary"/>

                    <field name="status" widget="statusbar" class="clickable-statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <h1>
                                <field name="sequence" nolabel="1"/>
                            </h1>
                            <field name="name"/>
                            <!--                            <field name="customer_name"/>-->
                            <!--                            <field name="type" widget="boolean"/>-->
                            <div>
                                <span class="d-inline-flex">
                                    <field name="is_hardware" widget="boolean" options="{'horizontal': True}"/>
                                    <label for="is_hardware"/>
                                </span>
                                <span class="d-inline-flex">
                                    <field name="is_software" widget="boolean" options="{'horizontal': True}"/>
                                    <label for="is_software"/>
                                </span>
                                <span class="d-inline-flex">
                                    <field name="is_other" widget="boolean" options="{'horizontal': True}"/>
                                    <label for="is_other"/>
                                </span>
                            </div>
                            <field name="email" widget="email"/>
                            <field name="phone" widget="phone"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="duration"/>
                            <field name="planning_month"/>
                            <field name="time" widget="float_time" invisible="1"/>
                            <field name="file" widget="file" invisible="1"/>
                            <field name="file" string="PDF View" widget="pdf_viewer" options="{'size': [50,50]}"
                                   invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Product">
                            <field name="request_line">
                                <list editable="bottom">
<!--                                    <field name="brand_id"/>-->
                                    <field name="item_id"/>
                                    <field name="image" widget="image" options="{'size': [50,50]}"/>
                                    <field name="description"/>
                                    <field name="sensitive_items" option="True"/>
                                    <field name="repair_status"/>
                                    <field name="price"/>
                                </list>
                            </field>
                                <control>
                                    <button name="action_open_product_catalog" type="object"
                                            string="Open Product Catalog"
                                            class="oe_highlight"/>
                                </control>
                            <group>
                                <group name="internal_notes" string="Internal Notes">
                                    <field colspan="2" name="notes" nolabel="1"
                                           placeholder="Define your terms and conditions ..."/>
                                </group>
                                <group class="oe_subtotal_footer">
                                    <field name="total_amount" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="service_request_calendar" model="ir.ui.view">
        <field name="name">service.request.calendar</field>
        <field name="model">service.request</field>
        <field name="arch" type="xml">
            <calendar date_start="date" string="Service Request"
            >
                <field name="name"/>
                <!--                <field name="customer_name"/>-->
                <field name="status"/>
                <field name="total_amount"/>
            </calendar>
        </field>
    </record>
