    <record id="service_request_kanban" model="ir.ui.view">
        <field name="name">service.request.kanban</field>
        <field name="model">service.request</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="status"/>
                <progressbar field="status" colors='{"new": "success", "cancel": "warning", "done": "danger"}'/>
                <template>
                    <t t-name="card">
                        <field name="name" class="fw-bold fs-5"/>
                        <div class="d-flex align-items-baseline mb-2">
                            <field name="name" class="fw-bolder fs-5 me-2"/>
                            <field name="total_amount" widget="monetary" class="fw-bolder ms-auto flex-shrink-0"/>
                        </div>
                        <footer class="align-items-end">
                            <field name="date" class="align-items-end"/>
                            <field name="status" widget="label_selection"/>
                        </footer>
                    </t>
                </template>
            </kanban>
        </field>

    </record>
    <!--search-->
    <record id="view_service_request_search" model="ir.ui.view">
        <field name="name">service.request.search</field>
        <field name="model">service.request</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <!--                <field name="customer_name"/>-->
                <field name="date"/>
                <!--                <field name="type"/>-->
                <field name="status"/>

                <filter name="today_date" string="Today's Request" domain="[('date', '=', context_today())]"/>
                <filter name="new_status" string="New" domain="[('status','=','new')]"/>
                <filter name="in_process_status" string="In Progress" domain="[('status','=','process')]"/>
                <filter name="done_status" string="Done" domain="[('status','=','done')]"/>
                <filter name="cancel_status" string="Cancelled" domain="[('status','=','cancel')]"/>
                <filter name="scrap_status" string="Scrap" domain="[('status','=','scrap')]"/>

                <filter name="group_by_status" string="Status" context="{'group_by':'status'}"/>
                <!--                <filter name="group_by_type" string="Type" context="{'group_by':'type'}"/>-->
                <filter name="name" string="Customer" context="{'group_by':'name'}"/>
            </search>
        </field>
    </record>

    <!--action-->
    <record id="action_service_request" model="ir.actions.act_window">
        <field name="name">Service Request</field>
        <field name="res_model">service.request</field>
        <field name="view_mode">list,form,calendar,graph,kanban,gantt</field>
    </record>
