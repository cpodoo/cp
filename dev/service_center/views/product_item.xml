<odoo>
    <!--    Tree veiw-->
    <record id="view_product_item_list" model="ir.ui.view">
        <field name="name">Product</field>
        <field name="model">product.item</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="brand_id" options="{'no_create': False, 'no_create_edit':False}"/>
                <field name="image" widget="image" options="{'size': [70,70]}"/>
            </list>
        </field>
    </record>

    <!--    form view-->
    <record id="view_product_item_from" model="ir.ui.view">
        <field name="name">Product</field>
        <field name="model">product.item</field>
        <field name="arch" type="xml">
            <form>
<!--                <header>-->
<!--                </header>-->
                <sheet>
                    <div name="button_box" position="inside">
                        <button class="oe_stat_button" type="object" icon="fa-pencil-square-o"
                                name="action_get_service">
                            <field string="Servies" name="service_count" widget="statinfo"/>
                        </button>
                    </div>
                    <field
                            name="image"
                            widget="image"
                            class="oe_avatar"
                            options="{'convert_to_webp': True, 'preview_image': 'image'}"
                    />
                    <div class="oe_title">
                        <label for="name" string="Product"/>
                        <h1>
                            <div class="d-flex">
                                <field class="text-break" name="name" options="{'line_breaks': False}" widget="text"
                                       placeholder="Product Name"/>
                            </div>
                        </h1>
                    </div>
                    <group>
                        <field name="description"/>
                        <field name="brand_id"/>
                        <field name="service_count"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_product_item" model="ir.actions.act_window">
        <field name="name">Product</field>
        <field name="res_model">product.item</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>