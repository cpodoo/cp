<odoo>
    <data noupdate="1">
        <record id="service_request_mail_temp" model="mail.template">
            <field name="name">Service Request</field>
            <field name="model_id" ref="model_service_request"/>
            <field name="email_from">{{ user.email }}</field>
            <field name="email_to">{{ object.email }}</field>
            <field name="subject">Service Request {{ object.name }}</field>
            <field name="body_html" type="html">
                <div>
                    <p>Hello <t t-out="object.name"/>,
                    </p>
                    <p>Please find the details of your service request below:</p>
                    <table style="border: 1px solid #ddd; border-collapse: collapse; width: 100%; margin-top: 10px;"
                           allign="center">
                        <thead>
                            <tr style="background-color: #f2f2f2;">
                                <th style="border: 1px solid #ddd; padding: 8px;">Brand</th>
                                <th style="border: 1px solid #ddd; padding: 8px;">Product</th>
                                <th style="border: 1px solid #ddd; padding: 8px;">Description</th>
                                <th style="border: 1px solid #ddd; padding: 8px;">Repair Status</th>
                                <th style="border: 1px solid #ddd; padding: 12px; text-align: right;">Repair Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="object.request_line" t-as="line">
                                <tr>
                                    <td style="border: 1px solid #ddd; padding: 7px;">
                                        <t t-out="line.brand_id.name"/>
                                    </td>
                                    <td style="border: 1px solid #ddd; padding: 7px;">
                                        <t t-out="line.item_id.name"/>
                                    </td>
                                    <td style="border: 1px solid #ddd; padding: 7px;">
                                        <t t-out="line.description"/>
                                    </td>
                                    <td style="border: 1px solid #ddd; padding: 7px;">
                                        <t t-out="line.repair_status"/>
                                    </td>
                                    <td style="border: 1px solid #ddd; padding: 12px; text-align: right;">
                                        <t t-out="line.price"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                    <p style="margin-top: 20px;" align="left">
                        <strong>Total Amount:</strong>
                        <t t-out="object.total_amount"/>
                    </p>
                    <p>Please feel free to contact us if you have any questions.</p>
                    <p>Best Regards,</p>
                    <p>
                        <strong>
                            <t t-out="user.name"/>
                        </strong>
                    </p>
                </div>
            </field>

        </record>
    </data>
</odoo>
