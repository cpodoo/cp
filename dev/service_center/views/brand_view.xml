<odoo>
    <!--    Tree veiw-->
    <record id="view_brand_list" model="ir.ui.view">
        <field name="name">Brand</field>
        <field name="model">brand.brand</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!--    form view-->
    <record id="view_brand_from" model="ir.ui.view">
        <field name="name">Brand</field>
        <field name="model">brand.brand</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_brand" model="ir.actions.act_window">
        <field name="name">Brand</field>
        <field name="res_model">brand.brand</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>