<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- list View -->
    <record id="property_management_payment_view_list" model="ir.ui.view">
        <field name="name">property.management.payment.list</field>
        <field name="model">property.management.payment</field>
        <field name="arch" type="xml">
            <list string="Stages" editable="top">
                <field name="account_number" />
                <field name="amount" string="Pay" />
                <field name="name" string="Payment Reference" />
                <field name="date" />
            </list>
        </field>
    </record>
    <!-- Form View -->
    <record id="property_management_payment_view_form" model="ir.ui.view">
        <field name="name">property.management.payment.form</field>
        <field name="model">property.management.payment</field>
        <field name="arch" type="xml">
            <form string="Group">
                <sheet>
                    <group>
                        <field name="account_number" />
                        <field name="amount" string="Pay" />
                        <field name="name" string="Payment Reference" />
                        <field name="date" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>