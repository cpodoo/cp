<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="property_management_tag_action" model="ir.actions.act_window">
        <field name="name">property Tags</field>
        <field name="res_model">property.management.tag</field>
        <field name="view_mode">list,form,kanban</field>
    </record>
    <!-- list View -->
    <record id="property_management_tag_view_list" model="ir.ui.view">
        <field name="name">property.management.tag.form</field>
        <field name="model">property.management.tag</field>
        <field name="arch" type="xml">
            <list string="Tag" editable="top">
                <field name="name" />
            </list>
        </field>
    </record>
    <!-- Form View -->
    <record id="property_management_tag_view_form" model="ir.ui.view">
        <field name="name">property.management.tag.form</field>
        <field name="model">property.management.tag</field>
        <field name="arch" type="xml">
            <form string="Tag">
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>