<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="property_management_type_action" model="ir.actions.act_window">
        <field name="name">property Types</field>
        <field name="res_model">property.management.type</field>
        <field name="view_mode">list,form,kanban</field>
    </record>
    <!-- list View -->
    <record id="property_management_type_view_list" model="ir.ui.view">
        <field name="name">property.management.type.list</field>
        <field name="model">property.management.type</field>
        <field name="arch" type="xml">
            <list string="property Types">
                <field name="sequence" widget="handle" />
                <field name="name" string="Title" />
            </list>
        </field>
    </record>
    <!-- Form View -->
    <record id="property_management_type_view_form" model="ir.ui.view">
        <field name="name">property.management.type.form</field>
        <field name="model">property.management.type</field>
        <field name="arch" type="xml">
            <form string="Group">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <notebook>
                        <page string="propertys">
                            <field name="property_ids">
                                <list>
                                    <field name="name" string="Title" />
                                    <field name="client_budget" string="Client Budget" />
                                    <field name="state" string="Status" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>