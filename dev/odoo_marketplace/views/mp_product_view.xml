		<record id="wk_mp_product_variant_action" model="ir.actions.act_window">
			<field name="name">Product Variants</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">product.product</field>
			<field name="context">{'search_default_product_tmpl_id': [active_id], 'default_product_tmpl_id': active_id, 'no_archive': 1}</field>
			<field name="search_view_id" ref="wk_product_product_seller_filter"/>
			<field name="domain">[('marketplace_seller_id','in',['get_marketplace_seller_id()'])]</field>
			<field
				name="view_ids"
				eval="[
				(5, 0, 0),
				(0, 0, {'sequence': 1, 'view_mode': 'list', 'view_id': ref('mp_product_product_tree_view')}),
				(0, 0, {'sequence': 2, 'view_mode': 'form', 'view_id': ref('mp_product_product_form_view')}),
				(0, 0, {'sequence': 3, 'view_mode': 'kanban', 'view_id': ref('mp_product_product_kanban_view')})
			]"/>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Click to define a new product.
				</p>
				<p>
					You must define a product for everything you sell, whether it's a physical product, a consumable or a service you offer to customers.
				</p>
				<p>
					The product form contains information to simplify the sale process: price, notes in the quotation, accounting data, procurement methods, etc.
				</p>
			</field>
		</record>
		<record id="mp_pricelist_item_form_view" model="ir.ui.view">
			<field name="name">mp.product.pricelist.item.form</field>
			<field name="model">product.pricelist.item</field>
			<field name="priority">100</field>
			<field name="arch" type="xml">
				<form string="Pricelist Items">
					<sheet>
						<group>
							<group name="pricelist_rule_target">
								<field name="pricelist_id" options="{'no_create': True,'no_open': True}"/>
								<field name="applied_on" widget="radio" invisible="1" />
								<field name="mp_compute_price" string="Computation" widget="radio"/>
								<field name="compute_price" invisible="1"/>
								<field name="fixed_price" invisible = "compute_price != 'fixed'"/>
								<field name="percent_price" invisible = "compute_price != 'percentage'"/>
							</group>
							<group name="pricelist_rule_limits">
								<field name="min_quantity" />
								<field name="date_start" />
								<field name="date_end"/>
							</group>
							<group name="pricelist_rule_related" >
								<!-- Infos from the pricelist for UI rendering (monetary fields, ...) -->
								<field name="currency_id"  options="{'no_open':True}"/>
								<field name="company_id"  options="{'no_open':True}" invisible="1"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="wk_seller_product_template_form_view" model="ir.ui.view">
			<field name="name">seller.product.template.common.form</field>
			<field name="model">product.template</field>
			<field name="mode">primary</field>
			<field name="arch" type="xml">
				<form string="Product">
					<header>
						<button name="set_pending" type="object" string="Request To Approve" invisible = "status in ('pending','approved','rejected')" class="btn-primary"/>
						<button name="approved" type="object" string="Approve" invisible = "status in ('draft','approved','rejected',False)" groups="odoo_marketplace.marketplace_officer_group" class="btn-primary"/>
						<button name="reject" type="object" string="Reject" invisible = "status in ('draft','rejected',False)" groups="odoo_marketplace.marketplace_officer_group"/>
						<button name="send_to_draft" type="object" invisible = "status in ('draft','approved','pending',False)" string="Send To Draft"/>
						<button string="Variant Prices" type="action" name="%(odoo_marketplace.mp_product_template_attribute_value_action)d" invisible="product_variant_count &lt;= 1" groups="product.group_product_variant"/>
						<button string="Update quantity" type="object" name="update_quantity" groups="product.group_product_variant" invisible="product_variant_count &gt; 1 or status in ('pending','draft','rejected') or type != 'consu'" context="{'mp_stock': True}"/>
						<field name="status" widget="statusbar" statusbar_visible="draft,pending,approved,rejected"/>
					</header>
					<sheet>
						<field name="id" invisible="True"/>
						<field name="website_published" invisible="True"/>
						<field name="is_product_variant" invisible="1"/>
						<field name="website_published" invisible="True"/>
						<div class="oe_button_box" name="button_box" invisible="status in ('rejected') or id == False">
							<button name="toggle_website_published" type="object" class="oe_stat_button" icon="fa-globe" invisible="status in ('draft','pending')">
								<field name="website_published" widget="website_publish_button"/>
							</button>
							<button name="open_website_url" type="object" class="oe_stat_button" widget="website_publish_button" icon="fa-globe" string="Go to Website" invisible="status in ('draft','pending')"/>
							<button name="%(odoo_marketplace.wk_mp_product_variant_action)d" type="action" icon="fa-sitemap" class="oe_stat_button" invisible="product_variant_count &lt;= 1">
								<field string="Variants" name="product_variant_count" widget="statinfo"/>
							</button>
							<button name="%(odoo_marketplace.wk_mp_product_template_quantity_action)d" type="action" icon="fa-cubes" class="oe_stat_button">Inventory Requests
							</button>

							<button  class="oe_stat_button" icon="fa-cubes" disabled="disabled" invisible="is_storable != True">
								<div class="o_field_widget o_stat_info">
									<span class="o_stat_value d-flex gap-1" widget="statinfo"> 
										<field name="qty_available" widget="statinfo" nolabel="1" class="oe_inline mr4"/>
										<field name="uom_name" class="oe_inline"/>
									</span>
									<span class="o_stat_text">On Hand</span>
								</div>
							</button>
							<button  class="oe_stat_button" icon="fa-cubes" disabled="disabled" invisible="is_storable != True">
								<div class="o_field_widget o_stat_info">
									<span class="o_stat_value d-flex gap-1">
										<field name="virtual_available" widget="statinfo" nolabel="1" class="oe_inline mr4"/>
										<field name="uom_name" class="oe_inline"/>
									</span>
									<span class="o_stat_text">Forecasted</span>
								</div>
							</button>
						</div>
						<field name="image_1920" widget="image" class="oe_avatar"/>
						<div class="oe_title">
							<label class="oe_edit_only" for="name" string="Product Name"/>
							<h1>
								<field name="name"/>
							</h1>
							<label class="oe_edit_only" for="public_categ_ids"/>
							<h3>
								<field name="public_categ_ids" required="1" options="{'no_create': True}" widget="many2many_tags" placeholder="Category..."/>
							</h3>
						</div>
						<field name="standard_price" class="" invisible="1"/>
						<div name="wk_div_info"></div>
						<br/>
						<notebook>
							<page string="Information">
								<group>
									<group>
										<field name="brand_id"/>
										<field name="type" invisible="1"/>
										<field name="type" widget="radio" options="{'horizontal': True}" readonly="status in ['approved', 'rejected']"/>
										<label for="is_storable" class="oe_inline" invisible="type != 'consu'" readonly="status in ['approved', 'rejected']"/>
										<div class="o_row w-100" invisible="type != 'consu'" readonly="status in ['approved', 'rejected']">
											<field name="is_storable" readonly="status in ['approved', 'rejected']"/>
											<field name="tracking" invisible="not is_storable" groups="stock.group_production_lot" readonly="status in ['approved', 'rejected']"/>
										</div>
										<!--<field name="brand_id"/>-->
										<field name="categ_id" required="1" options="{'no_create': True}" class="oe_inline" groups="odoo_marketplace.marketplace_officer_group,odoo_marketplace.marketplace_seller_group"/>
										<field name="marketplace_seller_id" required="1" readonly="status in ('approved','rejected')" domain="[('seller', '=', True), ('state', '=', 'approved')]" options="{'no_create': True}" context="{'form_view_ref': 'odoo_marketplace.wk_seller_form_view'}" groups="odoo_marketplace.marketplace_officer_group"/>
										<field name="marketplace_seller_id" invisible="1" groups="!odoo_marketplace.marketplace_officer_group"/>
										<field name="currency_id" invisible="1"/>
									</group>
									<group>
										<field name="list_price" widget='monetary' options="{'currency_field': 'currency_id'}"/>
										<field name="taxes_id" widget='many2many_tags' options="{'no_create': True, 'no_open':True}"/>
										<field name="barcode" invisible="product_variant_count > 1"/>
										<field name="hs_code"/>
										<field name="default_code" invisible="product_variant_count > 1" groups="odoo_marketplace.marketplace_officer_group"/>
									</group>
								</group>
								<separator string="Internal Notes" colspan="4" groups="odoo_marketplace.marketplace_officer_group"/>
								<field name="description" placeholder="This note is only for internal purposes." groups="odoo_marketplace.marketplace_officer_group"/>
							</page>
							<page name="variants" string="Variants" groups="product.group_product_variant">
								<field name="attribute_line_ids" widget="one2many_list" context="{'show_attribute': False}">
									<list string="Variants" editable="bottom">
										<field name="attribute_id" options="{'no_create': True, 'no_open':True}"/>
										<field name="value_ids" widget="many2many_tags" options="{'no_create_edit': True}" domain="[('attribute_id', '=', attribute_id)]" context="{'default_attribute_id': attribute_id}"/>
									</list>
								</field>
								<p class="oe_grey">
									<strong>Warning</strong>: adding or deleting attributes will delete and recreate existing variants and lead to the loss of their possible customizations.

								</p>
							</page>
							<page string="Sales">
								<div name="pricelist_item" groups="product.group_product_pricelist">
									<separator string="Pricing"/>
									<field name="item_ids" nolabel="1" context="{'default_base':'list_price', 'default_applied_on' :'1_product', 'form_view_ref': 'odoo_marketplace.mp_pricelist_item_form_view'}">
										<list string="Pricelist Items" >
											<field name="pricelist_id" string="Pricelist" required="1" options="{'no_create': True,'no_open': True}"/>
											<field name="common_price" string="Common Price"/>
											<field name="min_quantity"/>
											<field name="date_start"/>
											<field name="date_end"/>
											<field name="applied_on" invisible="1"/>
										</list>
									</field>
								</div>
								<group name="description">
									<separator string="Description for Customers" colspan="4"/>
									<group>
										<field name="description_sale" colspan="4" nolabel="1" placeholder="This note will be displayed on the quotations."/>
									</group>
								</group>
							</page>
							<page name="shop" string="eCommerce">
								<group name="shop">
									<group>
										<field name="website_url" invisible="1"/>
										<field name="website_id" options="{'no_create': True}" groups="website.group_multi_website"/>
										<field name="alternative_product_ids" widget="many2many_tags" domain="[('marketplace_seller_id', '=', marketplace_seller_id),('status','=','approved')]" readonly="status in ('rejected')" options="{'no_create': True}"/>
										<field name="accessory_product_ids" widget="many2many_tags" domain="[('marketplace_seller_id', '=', marketplace_seller_id),('status','=','approved')]" options="{'no_create': True}"/>
										<field name="website_ribbon_id" groups="base.group_no_one"/>
									</group>
									<group>
										<label for="allow_out_of_stock_order" invisible="type in ['service'] or is_storable == False" string="Out-of-Stock"/>
										<div invisible="type in ['service'] or is_storable == False">
											<field name="allow_out_of_stock_order" class="oe_inline" /> Continue Selling

										</div>
										<label for="show_availability" invisible="type in ['service'] or is_storable == False" string="Show Available Qty"/>
										<div invisible="type in ['service'] or is_storable == False">
											<field name="show_availability" class="oe_inline" />
											<span invisible="show_availability == False">
												<label for="available_threshold" string="only if below" class="o_light_label"/>
												<field name="available_threshold" class="oe_inline col-1" widget="integer"/>
                                                Units

											</span>
										</div>
										<field name="out_of_stock_message" invisible="type in ['service'] or is_storable == False"/>
									</group>
								</group>
								<group name="product_template_images" string="Extra Product Media">
									<field name="product_template_image_ids" class="o_website_sale_image_list" context="{'default_name': name}" mode="kanban" options="{'create_text':'Add a Media'}" nolabel="1"/>
								</group>
							</page>
							<page string="Inventory" invisible="type == 'service'">
								<group>
									<group string="Operations">
										<label for="sale_delay"/>
										<div>
											<field name="sale_ok" invisible="1"/>
											<field name="sale_delay" readonly="sale_ok == False" class="oe_inline" style="vertical-align:baseline"/>
											days

										</div>
									</group>
								</group>
								<group>
									<group string="Stock" invisible="product_variant_count &gt; 1">
										<label for="qty_available" invisible="id == False or status in ('pending','draft')"/>
										<div invisible="id == False or status in ('pending','draft')">
											<field name="qty_available" class="oe_inline"/>
										</div>
										<field name="virtual_available" invisible="status in ('pending','draft')"/>
										<field name="mp_qty" placeholder="Initail Quantity" readonly="status in ('approved','rejected')"/>
									</group>
									<group string="Logistics" invisible="type not in ['product', 'consu']">
										<field name="volume" invisible="product_variant_count > 1  and is_product_variant == False"/>
										<field name="weight" invisible="product_variant_count > 1  and is_product_variant == False"/>
										<field name="uom_id" groups="uom.group_uom" options="{'no_create': True}" widget="selection"/>
										<field name="uom_po_id" groups="uom.group_uom" options="{'no_create': True}" widget="selection" invisible="1"/>
									</group>
								</group>
								<separator string="Description for Delivery Orders" colspan="4"/>
								<field name="description_pickingout" colspan="4" nolabel="1" placeholder="This note will show up on delivery orders."/>
								<separator string="Description for Receipts" colspan="4"/>
								<field name="description_picking" colspan="4" nolabel="1" placeholder="This note will show up on receipt orders (e.g. where to store the product in the warehouse)."/>
							</page>
						</notebook>
					</sheet>
					

					<chatter/>
				</form>
			</field>
		</record>
