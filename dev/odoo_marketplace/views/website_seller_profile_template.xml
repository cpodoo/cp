<odoo>
	<data noupdate="0">

        <template id="mp_seller_profile" name="Seller Profile">
			<t t-call="website.layout">
				<div class="oe_structure"/>
				<div id="wrap">
					<t t-set="avg_val" t-value="seller.avg_review()"/>
					<t t-set="total_reviews" t-value="len(seller.fetch_active_review(seller.id))"/>
					<div class="carousel-inner-parent">
						<div class="carousel-inner">
							<t t-set="seller_profile_banner" t-value="seller.sudo().profile_banner"/>
							<t t-if="seller_profile_banner">
								<div class="mp_profile_banner_bg carousel-item oe_img_bg oe_custom_bg active" t-attf-style="background-image: url('/web/image/res.partner/#{seller.id}/profile_banner');width: 100%;height: 320px;background-size:100% 320px;"></div>
							</t>
							<t t-if="not seller_profile_banner">
								<div class="mp_profile_banner_bg carousel-item oe_img_bg oe_custom_bg active" t-attf-style="background-image: url('/odoo_marketplace/static/src/img/dummy-banner.png');width: 100%;height: 320px; background-size:100% 320px;"></div>
							</t>
						</div>
					</div>
					<div class='container'>
						<div class="row mp_seller_desc" id="" style="border:1px solid #e3e3e3;padding-top:15px;padding-bottom:15px;">
							<div class="row">
								<div class="col-md-4 col-lg-3 hidden-xs hidden-sm mp_seller_desc_profile">
									<div class="item oe_img_bg oe_custom_bg seller-profile-pic" t-attf-style="background-image: url('/web/image/res.partner/#{seller.id}/profile_image');background-size:180px;"></div>
								</div>
								<div class="col-md-6 col-lg-5" id="seller_name_and_rating">
									<div class="row ml0 mr0 d-none d-md-block">
										<p style="font-size:20px;" class="ps-4 mb-0" title="Seller Name">
											<b><t t-out="seller.name"/></b>
										</p>
										<t t-set="seller_add_state" t-value="seller.state_id"/>
										<t t-set="seller_add_country" t-value="seller.country_id"/>
										<t t-if="seller_add_state and seller_add_country">
											<div class="fa fa-map-marker" style="color:#656565;margin-left:15px;margin-top: 10px;" title="Seller Address">
												<span><t t-out="seller_add_state.name"/>,
													<t t-out="seller_add_country.name"/></span>
											</div>
										</t>
									</div>
                                    <div class="row ml0 mr0 d-block d-md-none d-lg-none seller_address_div" style="position: relative;">
                                        <span style="font-size:20px;" title="Seller Name">
											<b><t t-out="seller.name"/></b>
										</span>
										<t t-set="seller_add_state" t-value="seller.state_id"/>
										<t t-set="seller_add_country" t-value="seller.country_id"/>
										<t t-if="seller_add_state and seller_add_country">
											<div class="fa fa-map-marker" style="color:#656565;margin-left:15px;margin-top: 10px;" title="Seller Address">
												<span><t t-out="seller_add_state.name"/>,
													<t t-out="seller_add_country.name"/></span>
											</div>
										</t>
                                    </div>
									<div class="row ml0 mr0">
										<t t-if="website.mp_seller_review">
											<a href="#rating_review_tab" id="open-review-tab">
												<span class="" style="display:inline-flex;">
													<input
														id="star-readonly"
														class="rating form-control d-none"
														t-attf-value="#{avg_val}"
														data-show-clear="false"
														data-show-caption="false"
														data-min="0"
														data-max="5"
														data-step="0.1"
														data-readonly="true"
														data-size="xs"
														data-symbol="&#xf005;"
														data-glyphicon="false"
														data-rating-class="rating-fa"/>
													<span style="padding: 7px;">
														(<t t-out="total_reviews"/>
														<t t-if="total_reviews&gt;1">
															Reviews</t>
														<t t-if="total_reviews &lt; 2">
															Review</t>)</span>
												</span>
											</a>
										</t>
									</div>
								</div>
								<div class="" id="vacant_div"/>
							</div>
							<div class="row">
								<div class="col-md-12" style="color:#656565;">
									<span class="mp_wrap_content" t-out="seller.profile_msg"/>
								</div>
							</div>
							<t t-set="mp_seller_shop_id" t-value="seller.sudo().seller_shop_id"/>
							<div class="d-flex flex-row" style="">
								<t t-if="website.mp_product_count">
									<span class="badge bg-secondary rounded-pill fa fa-tags" aria-label="badge" style="padding:5px 10px;">
										<![CDATA[&nbsp;&nbsp;&nbsp;&nbsp;]]><t t-out="seller.seller_products_count()"/>
										<![CDATA[&nbsp;]]>Products</span>
								</t>
								<t t-if="website.mp_sale_count">
									<span class="badge bg-secondary rounded-pill fa fa-line-chart ms-1" aria-label="badge" style="padding:5px 10px;">
										<![CDATA[&nbsp;&nbsp;&nbsp;&nbsp;]]><t t-out="sales_count"/>
										<![CDATA[&nbsp;]]>Sales</span>
								</t>
							</div>
							<div class="row" style="margin-top:5px;margin-bottom:5px;">
								<t t-if="website.mp_seller_since">
									<div class="col-md-4">
										<i>
											selling from
											<span style="">
												<b><span t-field="seller.create_date" t-options='{"format": "d MMMM y"}'/></b>
												to till now</span>
										</i>
									</div>
								</t>
							</div>
							<div class="row">
								<div class="col-12 col-md-5 col-lg-4 pt-1">
									<div t-if="website.mp_seller_contact_btn" style="display:inline;">
										<a t-if="not request.website.is_public_user()" t-attf-href="mailto:{{ seller.email }}" class="btn btn-primary">Contact Seller</a>

										<button t-else="" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#loginfeed">
											Contact Seller
										</button>

									</div>

									<t t-if="website.sudo().get_group_mp_shop_allow()">
										<t t-if="mp_seller_shop_id and mp_seller_shop_id.website_published and mp_seller_shop_id.active">
											<a class="btn btn-primary" target="_blank" t-attf-href="/seller/shop/#{mp_seller_shop_id.url_handler}">Visit Shop</a>
										</t>
									</t>
									<div class="modal fade" id="loginfeed" tabindex="-1" role="dialog"  aria-hidden="true">
											<div class="modal-dialog" role="document">
												<div class="modal-content">
												<div class="modal-header">
													<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
													</button>
												</div>
												<div class="modal-body">
													<h5>
														You must first <a class="text-bold" t-attf-href="/web/login/?redirect=#{quote_plus(request.httprequest.url)}"> Log in</a> to communicate with the seller.
													</h5>
												</div>
												<div class="modal-footer">
													<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
												</div>
												</div>
											</div>
										</div>
								</div>
								<div class="col-12 col-md-5 col-lg-5 pt-2">
									<t t-foreach="seller.social_media_link_ids" t-as="social_media">
										<t t-if="social_media.wk_website_published">
											<div style='height:38px;width:38px;float:left;'>
												<a t-attf-href="{{social_media.complete_url}}" target="_blank">
													<span itemprop="image" t-field="social_media.social_media_id.image" t-options="{'widget': 'image'}" t-att-alt="social_media.social_media_id.name" t-attf-title="#{'Follow on ' + social_media.social_media_id.name}"/>
												</a>
											</div>
										</t>
									</t>
								</div>
								<div class="col-8 col-md-4 col-lg-3 pt-1">
									<a class="pull-right" target="_blank" href="/contactus" style="text-decoration: underline;">Contact Us about
										<t t-out="seller.name"/>
									</a>
								</div>
							</div>
						</div>
					</div>
					<div class="clearfix mt16" id="seller-pannel"/>
					<div class="oe_structure"/>
					<div class='container mb16'>
						<div class="card with-mp-nav-tabs tabbable" id="seller-info-pannel">
							<div class="card-header" style="padding: 0.5rem;padding-bottom: 0;border-bottom: 0;">
								<ul class="nav nav-tabs" id="shop-nav-tabs">
									<li class="nav-item">
										<a href="#seller_all_prod" class="nav-link active" data-bs-toggle="tab">
											<span>
												All Products
												<span class='badge rounded-pill bg-secondary'><t t-out="len(products)"/>
													Out Of
													<t t-out="product_count"/>
												</span>
											</span>
										</a>
									</li>
									<t t-if="not website.sudo().get_group_mp_shop_allow() ">
										<li class="nav-item">
											<a href="#seller_recent_prod" class="nav-link" id="profile_recently_product_tab" data-bs-toggle="tab">
												Recently Added Products
												<input type="hidden" name="seller_id" id="seller_id" t-att-value="int(seller.id)"/>
												<span class='badge rounded-pill bg-secondary'><t t-out="recent_prod"/></span>
											</a>
										</li>
									</t>
									<t t-if="website.mp_seller_review">
										<li class="nav-item">
											<a href="#rating_review_tab" class="nav-link" data-bs-toggle="tab">
												Rating &amp; Reviews
											</a>
										</li>
									</t>
									<t t-if="website.mp_return_policy">
										<li class="nav-item">
											<a href="#return_policy_tab" class="nav-link" data-bs-toggle="tab">
												Return Policy
											</a>
										</li>
									</t>
									<t t-if="website.mp_shipping_policy">
										<li class="nav-item">
											<a href="#shipping_policy_tab" class="nav-link" data-bs-toggle="tab">
												Shipping Policy
											</a>
										</li>
									</t>
									<t t-if="website.mp_shipping_address">
										<li class="nav-item">
											<a href="#contact_us_tab" class="nav-link" data-bs-toggle="tab">
												Seller Contact
											</a>
										</li>
									</t>
								</ul>
							</div>
							<div class="card-body">
								<div class="tab-content" id="shop-tab-content">
									<div class="tab-pane container active" id="seller_all_prod">
										<t t-call="odoo_marketplace.shop_recently_product"/>
										<div class="products_pager">
											<t t-call="website.pager"/>
										</div>
									</div>
									<t t-if="not website.sudo().get_group_mp_shop_allow() ">
										<div class="tab-pane" id="seller_recent_prod">
											<div class="products_pager">
												<t t-call="website.pager"/>
											</div>
										</div>
									</t>
									<div class="tab-pane container" id="return_policy_tab">
										<span class="mp_wrap_content" t-out="seller.return_policy"/>
									</div>
									<div class="tab-pane container" id="rating_review_tab">
										<t t-set="seller_active_review" t-value="seller.fetch_active_review2(seller.id,0,website.mp_review_load_no)"/>
										<t t-set="can_comment" t-value="sha_in or token or not is_user_public"/>
										<div class="row">
										<div class='col-lg-5 col-md-12'>
											<div class="mt-2" style="font-size:16px;line-height:20px;font-weight:700;">Average Review &amp; Recommendations</div>
											<t t-call="odoo_marketplace.mp_seller_review_information"/>
										</div>


  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog">
	  <div class="modal-content">
		<div class="modal-header py-0 mt-4">
			<span class="add-all-review">
				<p class="tile1-header">WRITE A REVIEW</p>
			</span>
			<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
		</div>
		<div class="modal-body pt-0">
			<form name="seller_review_form" action="/seller/review" method="post" id="mp-review-form" class="form-horizontal" enctype="multipart/form-data">
				<div class="container">
					<div class="review-tiles" t-if="can_comment">
						<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
						<input type="hidden" id="seller_id" name="seller_id" t-attf-value="#{seller_id or seller.id}"/>
						<div style="color:red;font-size:1.5em"></div>

						<div style="color:#337AB7;">
							<span class="fa fa-thumbs-up fa-2x thumb"></span>
							<div style="display:inline-block">
								<input
									required="required"
									type="hidden"
									name="stars"
									id="rating-star"
									data-show-clear="false"
									class="form-control d-none"
									value=""
									data-min="0"
									data-max="5"
									data-step="1"
									data-size="sm"
									data-symbol="&#xf005;"
									data-glyphicon="false"
									data-rating-class="rating-fa"/>
							</div>
						</div>
						<div class="input-text mb8" id="review-title-box">
							<p class="textbox-label mb8">Review Title<sup>
									<i title="Review" class="fa fa-asterisk fa-icon-smaller" style="color:red"></i>
								</sup>
							</p>
							<input id="title" type="text" class="form-control" name="title" t-attf-value="#{title or ''}" maxlength="200" required="required" placeholder="Write review title"/>
						</div>
						<div class="input-text" id="review-summary-box">
							<p class="textbox-label mb8">Your Review<sup>
									<i title="Review" class="fa fa-asterisk fa-icon-smaller" style="color:red"></i>
								</sup>
							</p>
							<textarea id="summary" rows="3" name="review" class="form-control" required="required" placeholder="Write Your review..." style="resize: none;height: 100px;"/>
						</div>
							<div class="mt8 col-md-12">
								<div class="row mb8">
								<div class=" col-md-4">
									<button id="btn-create-review" type="button" class="btn btn-primary">Add Review</button>
								</div>
								<div class=" col-md-8 mt-2">
									<span id="submit-msg" class="col-md-9"/>
								</div>
							</div>
						</div>
					</div>
					<div class="css_editable_mode_hidden review-tiles" t-if="not can_comment" style="box-shadow: 2px 2px 2px 2px rgba(0,0,0,0.16),0 0 0 1px rgba(0,0,0,0.08);">
						<span class="add-all-review">
							<p class="tile1-header">WRITE YOUR REVIEW</p>
						</span>
						<p class="mt16">You must be
							<a t-attf-href="/web/login?redirect=#{quote_plus(request.httprequest.url + '#write-review')}">logged in</a>
							to post a review.</p>
					</div>
				</div>
			</form>
		</div>
	  </div>
	</div>
  </div>
			<div class='col-lg-7 col-md-12'>
											<div class="row px-2">

												<div class="col-lg-9 col-6 mt-2" style="font-size:18px;line-height:20px;font-weight:700;">Displaying Reviews</div>
												<div class="col-lg-3 col-6 px-0">
													<button class="mx-1 py-2 px-2" style="background-color:#1B55EC;color:white;white-space:nowrap;float:right;" data-bs-toggle="modal" data-bs-target="#exampleModal">Write A Review</button>
												</div>
											</div>
										<t t-set="total_reviews" t-value="seller.fetch_active_review(seller.id)"/>
										<t t-if="seller_active_review">
											<div class="sort mt-3" id="seller_review_sort" style="padding-right: 20px;padding-left: 20px;border-bottom:3px solid #D8D8D8;">
												<nav class="navbar navbar-expand-lg navbar-light" style="padding:0px">
													 <div class="navbar-collapse row">
														<ul class="nav col-lg-3 col-md-4">
															<li class="nav-item" style="margin-top: 7px;color:black;">
																<div class="col-md-12">
																	<span class="">Total reviews
																	<span class="">
																		<span id="viewed">
																			<t t-out="len(seller_active_review)"/>
																		</span>
																		/
																		<span id="total_seller_reviews">
																			<t t-out="len(total_reviews)"/>
																		</span>
																	</span></span>
																</div>
															</li>
														</ul>
													<ul class="nav justify-content-end col-lg-9 col-md-8">
														<li class="nav-item" style="margin-top: 10px;font-size:18px;">
															<span style="color:#989898;" class="">Sort By:</span>
														</li>

														<div class="dropdown" style="margin-right:1rem;">
															<button aria-expanded="false" type="button" aria-haspopup="true" role="button" data-bs-toggle="dropdown" class="btn dropdown-toggle px-0 mx-1" href="#" style="margin-top:11px;">
															  <span id="selected" style="color:#4a4949;">Most Recent</span>
															  <span class="caret mx-1"></span></button>
														
															<ul class="dropdown-menu review_sort_by" style="min-width:5rem;">
															  <li><a id="most_recentab" class="dropdown-item active-sort-tab" href="#">Most Recent</a></li>
															  <li><a id="most_helpfulab" class="dropdown-item" href="#">Most Helpful</a></li>
															</ul>
														  </div>

														<li class="nav-item " style="margin-top: 10px;font-size:18px;">
															<span style="color:#989898;" class="">Filter:</span>
														</li>

														<div class="dropdown">
															<button aria-expanded="false" type="button" aria-haspopup="true" role="button" data-bs-toggle="dropdown" class="btn dropdown-toggle px-0 mx-1" href="#" style="margin-top:11px;">
															  <span id="filter_selected" style="color:#4a4949;">All Stars</span>
															  <span class="caret mx-1"></span>
															</button>										
															<ul class="dropdown-menu review_filter_by" style="min-width:5rem;">
															  <li><a data-custom-value="-1" class="dropdown-item active-sort-tab" href="#" style="padding: 0rem 1rem;">All stars</a></li>
															  <li><a data-custom-value="5" class="dropdown-item" href="#" style="padding: 0rem 1rem;">5 star</a></li>
															  <li><a data-custom-value="4" class="dropdown-item" href="#" style="padding: 0rem 1rem;">4 star</a></li>
															  <li><a data-custom-value="3"  class="dropdown-item" href="#" style="padding: 0rem 1rem;">3 star</a></li>
															  <li><a data-custom-value="2" class="dropdown-item" href="#" style="padding: 0rem 1rem;">2 star</a></li>
															  <li><a data-custom-value="1"  class="dropdown-item" href="#" style="padding: 0rem 1rem;">1 star</a></li>
															</ul>
														  </div>												
													</ul>
												</div>
												</nav>
												<div class="clear"></div>
											</div>
										</t>
										<div class="row" id="seller_all_review">
											<div class="col-md-12 mp-box-review">
												<t t-set="seller_review_ids" t-value="seller_active_review"/>
												<t t-call="odoo_marketplace.mp_seller_review_template"/>
												<t t-if="len(seller_active_review) == 0">
													<div class="alert alert-info">
														<center>
															<strong>Review Not Found</strong>
														</center>
													</div>
												</t>
											</div>
											<div class="col-md-12 mp-box-review_loader" style="display:none;"/>
											<input type="hidden" name="limit" t-att-value="website.mp_review_load_no" id="limit"/>
											<input type="hidden" name="seller_id" t-att-value="seller.id" id="seller_id"/>
											<t t-set="total_viewed" t-value="len(seller_active_review)"/>
											<t t-if="total_viewed &lt; len(total_reviews)">
												<div id="mp-load-more-div" class="col-md-12 col-sm-12 col-xs-12">
													<button id="mp-load-morebtn" class="btn btn-block mp-load-more-btn px-4" style="background-color:#14B8A6;color:white;">Load more</button>
													<button id="mp-load-morebtn-loder" class="btn btn-block mp-load-more-btn disabled px-4" style="display:none;background-color:#14B8A6;color:white;">
														<i title="spin" class="fa fa-spinner fa-pulse fa-1x fa-fw"></i>Loading more</button>
												</div>
											</t>
										</div>
										</div>

									</div>
									</div>
									<div class="tab-pane" id="shipping_policy_tab">
										<span class="mp_wrap_content" t-out="seller.shipping_policy"/>
									</div>
									<div class="tab-pane" id="contact_us_tab">
										<ul class="list-unstyled">
											<li t-ignore="true">
												<i title="Phone" class="fa fa-phone"></i>
												<label>Phone :
												</label>
												<span t-field="seller.phone"></span>
											</li>
											<li t-ignore="true">
												<i title="Mobile" class="fa fa-mobile" style="font-size: 18px;margin-left: 3px;margin-right: 3px;"></i>
												<label>Mobile :
												</label>
												<span t-field="seller.mobile"></span>
											</li>
											<li t-ignore="true">
												<i title="Email" class="fa fa-envelope"></i>
												<label>Email :
												</label>
												<span t-field="seller.email"></span>
											</li>
