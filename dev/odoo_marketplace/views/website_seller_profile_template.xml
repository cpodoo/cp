										<span class="col-2" style="float:right;"><t t-out="seller.total_star_count(5)"/></span></span>

										<div class="fa-star-div">
											<span class="fa fa-star"/>
											<span class="fa fa-star"/>
											<span class="fa fa-star"/>
											<span class="fa fa-star"/></div>
										<span class="row" style="--gutter-x: 4px;">
										<span class="progress star-progress-bar px-0 mt-2 col-10">
											<span class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" t-attf-style="width:#{100*seller.total_star_count(4)/total_reviews if total_reviews else 0}%; background-color:#5CD97F;"></span>
										</span>
										<span class="col-2" style="float:right;"><t t-out="seller.total_star_count(4)"/></span></span>

										<div class="fa-star-div">
											<span class="fa fa-star"/>
											<span class="fa fa-star"/>
											<span class="fa fa-star"/></div>
										<span class="row" style="--gutter-x: 4px;">
										<span class="progress star-progress-bar px-0 mt-2 col-10">
											<span class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" t-attf-style="width:#{100*seller.total_star_count(3)/total_reviews if total_reviews else 0}%; background-color:#E85115;"></span>
										</span>
										<span class="col-2" style="float:right;"><t t-out="seller.total_star_count(3)"/></span></span>

										<span class="row" style="--gutter-x: 4px;">
											<div class="fa-star-div">
												<span class="fa fa-star"/>
												<span class="fa fa-star"/></div>
										<span class="progress star-progress-bar px-0 mt-2 col-10">
											<span class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" t-attf-style="width:#{100*seller.total_star_count(2)/total_reviews if total_reviews else 0}%; background-color:#B14500;"></span>
										</span>
										<span class="col-2" style="float:right;"><t t-out="seller.total_star_count(2)"/></span></span>

										<div class="fa-star-div">
											<span class="fa fa-star"/></div>
										<span class="row" style="--gutter-x: 4px;">
										<span class="progress star-progress-bar px-0 mt-2 col-10">
											<span class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" t-attf-style="width:#{100*seller.total_star_count(1)/total_reviews if total_reviews else 0}%; background-color:#E70E12;"></span>
										</span>
										<span class="col-2" style="float:right;"><t t-out="seller.total_star_count(1)"/></span></span><br/>																			
									</div>
								</div>
								<hr style="color:#898686;height:2px;margin-top:10px;margin-bottom:10px;padding:0px;"/>
								<div class="row review_recommendation" style="text-align: -webkit-center;padding: 0px 22px;margin-top:5%;">
									<div class="col-md-5" style="max-height: 130px;text-align: -webkit-center;">
										<div class="recommendation-cir" t-att-data-percent="seller.total_active_recommendation()[1]"></div>
										<div class="rating-bar-star mt-3">
											<i title="thumbs" style="color:#35A7E8;" class="fa fa-thumbs-o-up fa-3x"></i>
										</div>
									</div>
									<div class="col-md-6 px-0 mt-4">
										<div class="recommendation_detail" >
										<span style="font-size:18px;font-weight:400;text-align:center;"><t t-out="round(seller.total_active_recommendation()[1],2)"/>% recommendation</span>
										<t t-if="seller.total_active_recommendation()[0] &gt; 0">
											<div style="border-top:2px solid #D8D8D8; text-align:center;font-size:16px;font-weight:400;">Based on
												<t t-out="seller.total_active_recommendation()[0]"/>
												recommendations
											</div>
										</t>
										</div>
										<br/>
									</div>
									<div class="row px-5">
										<div class="col-12 px-3 py-4 my-3" style="text-align:left;background-color:#EFF6FF;" t-if="can_comment">
											<div id="recommend-msg">
                                                <p t-if="already_recommend != None">
                                                    Recommendation already received, for modification re-click your choice below.
                                                </p>
                                                <p style="font-weight:700;font-size:14px;line-height:20px;" t-if="already_recommend == None">
                                                    Would you recommend this seller?
                                                </p>
                                            </div>
											<button style="background-color:#09ab75;color:white;" id="recommend-yes" type="button" t-att-class="'btn disabled' if already_recommend == 'yes' else 'btn btn-info'">Yes</button>
											<button style="background-color:#F87171;color:white;" id="recommend-no" type="button" t-att-class="'btn disabled' if already_recommend == 'no' else 'btn btn-info'">No</button>
										</div>
										<div class="css_editable_mode_hidden review-tiles" t-if="not can_comment" style="text-align:center;box-shadow: 2px 2px 2px 2px rgba(0,0,0,0.16),0 0 0 1px rgba(0,0,0,0.08);">
											<p>Want to recommend this seller?</p>
											<p class="mt16">You must be
												<a t-attf-href="/web/login?redirect=#{quote_plus(request.httprequest.url + '#write-review')}">logged in</a>
												for recommendation.</p>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>

			</div>
		</template>

        <template id="message_thread_for_mp_seller_review">
			<section id="seller_review_discussion" class="mp_review_chatter">
				<t t-call="odoo_marketplace.my_message_thread">
					<t t-out="message"/>
					<t t-set="object" t-value="message"/>
					<t t-set="chatter_mode" t-value="'json'"/>
				</t>
			</section>
		</template>

    </data>
</odoo>
