<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="download_mo_zip_action" model="ir.actions.server">
            <field name="name">Download Manufacturing Order Compressed</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="mrp.model_mrp_production"/>
            <field name="binding_model_id" ref="mrp.model_mrp_production"/>
            <field name="state">code</field>
            <field name="code">
                if records:
                action = records.action_mo_download_zip()
            </field>
        </record>
        
        <record id="action_mrp_production_excel_zip_all" model="ir.actions.server">
            <field name="name">Download All MO Reports Excel</field>
            <field name="model_id" ref="model_mrp_production"/>
            <field name="binding_model_id" ref="model_mrp_production"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                action = model.generate_mo_excel_report(env.context.get('active_ids', []))
            </field>       
        </record>
    </data>
</odoo>