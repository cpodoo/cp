<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Reject Reason Wizard Form -->
    <record id="reject_reason_wizard_view_form" model="ir.ui.view">
        <field name="name">reject.reason.view.form</field>
        <field name="model">reject.reason</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Reject Loan">
                <group>
                    <field name="reason"/>
                    <field name="loan_id" invisible="1"/>
                </group>
                <footer>
                    <button name="action_reject_loan" string="Reject"
                            type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Reject Reason Wizard Action -->
    <record id="action_reject_reason_wizard" model="ir.actions.act_window">
        <field name="name">Reject Reason</field>
        <field name="res_model">reject.reason</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="reject_reason_wizard_view_form"/>
        <field name="target">new</field>
    </record>


     <!-- Skip Installment Reject Reason Wizard Form View -->
    <record id="skip_installment_reject_reason_wizard_view_form" model="ir.ui.view">
        <field name="name">skip.installment.reject.reason.form</field>
        <field name="model">skip.installment.reject.reason</field>
        <field name="arch" type="xml">
            <form string="Provide Rejection Reason">
                <group>
                    <field name="skip_installment_id" invisible="1"/>
                    <field name="reason_text" nolabel="1" placeholder="Enter the reason for rejecting the skip request here..."/>
                </group>
                <footer>
                    <button name="action_reject_skip_installment" string="Reject Request" type="object" class="btn-danger" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>


       