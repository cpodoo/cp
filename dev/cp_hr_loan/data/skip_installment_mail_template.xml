<?xml version="1.0"?>
<odoo>
    <data noupdate="1">
        <!--Email template -->
        <record id="skip_cp_manager_approval" model="mail.template">
            <field name="name">Skip Installment Request to Department Manager</field>
            <field name="model_id" ref="cp_hr_loan.model_cp_skip_installment"/>
            <field name="email_from">{{ object.user_id.email }}</field>
            <field name="email_to"></field>
            <field name="subject">Skip Installment {{ object.name }} Request form {{ object.employee_id.name }}</field>
            <field name="body_html" type="html">
                <div>
                	<p>Dear <i><t t-out="object.manager_id.name"></t></i>,</p>
                	<p></p>
                	<p> Skip Installment request from <strong><i><t t-out="object.employee_id.name"></t></i></strong></p>
                	<ul>
                		<li><strong>Installment Detail:</strong></li>
                		<li><strong>Loan :</strong> <t t-out="object.loan_id.name"></t></li>
                		<li><strong>Installment: </strong><t t-out="object.installment_id.name"></t></li>
                		<li><strong>Installment Amount: </strong><t t-out="object.installment_id.installment_amt"></t></li>
                		<li><strong>Interest Amount: </strong><t t-out="object.installment_id.ins_interest"></t> </li>
                	</ul>
                	
                    <p>You can access the loan request using the link below:</p>
                    <p><a href="{{ object.skip_installment_url }}"><t t-out="object.skip_installment_url"></t></a></p>

                    <p><strong>Regards,</strong><br/><t t-out="object.employee_id.name"></t></p>
                </div>
            </field>
         </record>

        <!--Email template -->
        <record id="skip_ins_hr_manager_request" model="mail.template">
            <field name="name">Skip Installment Request to HR Manager</field>
            <field name="model_id" ref="cp_hr_loan.model_cp_skip_installment"/>
            <field name="email_from">{{ object.manager_id.work_email }}</field>
            <field name="email_to"></field>
            <field name="subject">Skip Installment {{ object.name }} Request form {{ object.employee_id.name }}</field>
            <field name="body_html" type="html">
                <div>
                	<p>To <strong>HR Manager</strong></p>
                	<p> Skip Installment request from <strong><t t-out="object.employee_id.name"></t></strong></p>
                	<p> Skip Installment Request Approve by <strong><t t-out="object.manager_id.name"></t></strong> Department Manager</p>
                	<ul>
                        <li><strong>Installment Detail:</strong></li>
                        <li><strong>Loan :</strong><t t-out="object.loan_id.name"></t></li>
                        <li><strong>Installment: </strong><t t-out="object.installment_id.name"></t></li>
                        <li><strong>Installment Amount: </strong><t t-out="object.installment_id.installment_amt"></t></li>
                        <li><strong>Interest Amount: </strong><t t-out="object.installment_id.ins_interest"></t></li>
                    </ul>

                    <p>You can access the loan request using the link below:</p>
                    <p><a href="{{ object.skip_installment_url }}"><t t-out="object.skip_installment_url"></t></a></p>

                    <p><strong>Regards,</strong><br/><t t-out="object.manager_id.name"></t></p>
                </div>
            </field>
         </record>

        <record id="hr_manager_confirm_skip_installment" model="mail.template">
            <field name="name">Skip Installment Request Confirm By Hr Manager</field>
            <field name="model_id" ref="cp_hr_loan.model_cp_skip_installment"/>
            <field name="email_from">{{ object.hr_manager_id.work_email }}</field>
            <field name="email_to"></field>
            <field name="subject">Your Skip Installment {{ object.name }} Request has been Confirmed</field>
            <field name="body_html" type="html">
                <div>
                	<p>Dear <i><t t-out="object.employee_id.name"></t></i></p>
                	<p></p>
                	<p> Your Skip Installment <strong><t t-out="object.name"></t></strong>Request Confirm By <strong><t t-out="object.hr_manager_id.name"></t></strong></p>
                    <p>You can access the loan request using the link below:</p>
                    <p><a href="{{object.skip_installment_url }}"><t t-out="object.skip_installment_url"></t></a></p>
                    <p><strong>Regards,</strong><br/><t t-out="object.hr_manager_id.name"></t></p>
                </div>
            </field>
         </record>

        <record id="cp_manager_reject_skip_installment" model="mail.template">
            <field name="name">Cp Manager Skip Installment Request Reject</field>
            <field name="model_id" ref="cp_hr_loan.model_cp_skip_installment"/>
            <field name="email_from">{{ object.manager_id.work_email }}</field>
            <field name="email_to"></field>
            <field name="subject">Your Skip Installment {{ object.name }} Request has been Rejected</field>
            <field name="body_html" type="html">
                <div>
                	<p>Dear<i> <t t-out="object.employee_id.name"></t></i></p>
                	<p></p>
                	<p> Your Skip Installment <strong><t t-out="object.name"></t></strong> Request Rejected By <strong><t t-out="object.manager_id.name"></t></strong></p>

                	<p>You can access the loan request using the link below:</p>
                    <p><a href="{{ object.skip_installment_url }}"><t t-out="object.skip_installment_url"></t></a></p>
                    <p><strong>Regards,</strong><br/><t t-out="object.manager_id.name"></t></p>
                </div>
            </field>
         </record>

        <record id="hr_manager_reject_skip_installment" model="mail.template">
            <field name="name">Skip Installment Request Reject By Hr Manager</field>
            <field name="model_id" ref="cp_hr_loan.model_cp_skip_installment"/>
            <field name="email_from">{{ object.hr_manager_id.work_email }}</field>
            <field name="email_to"></field>
            <field name="subject">Your Skip Installment {{ object.name }} Request has been Rejected</field>
            <field name="body_html" type="html">
                <div>
                	<p>Dear <i><t t-out="object.employee_id.name"></t></i></p>
                	<p></p>
                	<p> Your Skip Installment <strong><t t-out="object.name"></t></strong> Request Rejected By <strong><t t-out=" object.hr_manager_id.name"></t></strong></p>

                	<p>You can access the loan request using the link below:</p>
                    <p><a href="{{ object.skip_installment_url }}"><t t-out="object.skip_installment_url"></t></a></p>
                    <p><strong>Regards,</strong><br/><t t-out="object.hr_manager_id.name"></t></p>
                </div>
            </field>
         </record>
    </data>
</odoo>
        
        
        
      
        
        
    
