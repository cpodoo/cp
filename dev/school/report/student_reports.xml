<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="student_custom_report_paperformat" model="report.paperformat">
        <field name="name">Student Custom Paper Format</field>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="margin_top">50</field>
        <field name="margin_bottom">32</field>
        <field name="margin_left">10</field>
        <field name="margin_right">0</field>
        <field name="header_spacing">52</field>
        <field name="dpi">90</field>
    </record>

    <record id="action_report_school_student_details" model="ir.actions.report">
        <field name="name">Student Details Report</field>
        <field name="model">school.school</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">school.report_school_student_details</field>
        <field name="report_file">school.report_school_student_details</field>
        <field name="binding_model_id" ref="school.model_school_school"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="school.student_custom_report_paperformat"/>
    </record>
</odoo>