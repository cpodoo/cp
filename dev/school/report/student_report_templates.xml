<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_school_student_details">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="student">
                <t t-call="school.sub_students"/>
            </t>
        </t>
    </template>

    <template id="sub_students">
        <t t-call="web.external_layout">
            <div class="page">
                <t t-call="school.school_students"/>
                <t t-call="school.school_students_more"/>
            </div>
        </t>
    </template>

    <template id="school_students">
        <h1 t-att-style="'color: red;'">Hello how are you?</h1>
        <p><b>Name : </b><span t-field="student.name"/></p>
<!--        <img src="/report/barcode/QR/hello world" width="80" height="80"-->
<!--             alt="Barcode"/>-->
        <img t-att-src="'/report/barcode/QR/' + (student.name or '')" height="80" width="80"
             alt="Barcode"/>
        <br/>

        <img t-att-src="image_data_uri(student.image)"
             t-if="student.image"
             alt="Image not found"
             height="80"
             width="80"/>
        <br/>
        <div t-field="student.image"
           t-options="{'widget':'image', 'height':80, 'width':80}"/>
        <br/>
        <img src="/school/static/description/icon.png"
             alt="Image is not loaded."
             height="80"
             width="80"/>
        <br/>

