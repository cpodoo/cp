<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="email_template_partner_basic" model="mail.template">
            <field name="name">Sale Order Approval Notification</field>
            <field name="model_id" ref="school.model_school_school"/>
            <field name="email_from">{{ object.email }}</field>
            <field name="email_to">{{ object.email }}</field>
            <field name="subject">Sale Order Confirmation - {{ object.name }}</field>
            <field name="body_html" type="html">
                <p>Hello</p>
                <p>Your Sale Order <strong><t t-out="object.name"/> </strong> has been confirmed.</p>
                <p>Thank you for your business!</p>
                <p>Best Regards,</p>
            </field>
        </record>
    </data>
</odoo>