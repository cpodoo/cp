<odoo>
    <record id="planning_wizard" model="ir.ui.view">
        <field name="name">planning.wizard.form</field>
        <field name="model">planning.wizard</field>
        <field name="arch" type="xml">
            <form string="Planning Wizard">
                <header>
                    <button name="generate_planning" string="Generate Planning" type="object" class="btn-primary"/>
                    <button name="cancel" string="Cancel" type="object" class="btn-primary"/>
                </header>
                <group>
                    <group>
                        <field name="start_date"/>
                    </group>
                    <group>
                        <field name="end_date"/>
                    </group>
                    <group>
                        <field name="num_days"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="action_planning_wizard" model="ir.actions.act_window">
        <field name="name">Planning Wizard</field>
        <field name="res_model">planning.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>