<odoo>
  <data>

    <record id="product_template_adding_size" model="ir.ui.view">
      <field name="name">product.template.inherit</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_form_view"/>
      <field name="arch" type="xml">
<!--        <field name="categ_id" position="after">-->
<!--          <field name="product_size_id" widget="many2many_tags"/>-->
<!--        </field>-->

        <xpath expr="//notebook" position="inside">
          <page string="Recipe">
<!--            name="recipe_info"-->
            <field name="recipe_line_ids">
              <list string="recipe" editable="bottom">
                <field name="product_categ_id" widget="many2one_tags"/>
                <field name="product_id" widget="many2many_tags"/>
                <field name="default_product_id" widget="many2one_tags"/>
                <field name="product_standard_qty"/>
                <field name="uom_id" widget="many2one_tags"/>
              </list>
            </field>
          </page>
        </xpath>
      </field>
    </record>

    <record id="product_template_form_view_inherit" model="ir.ui.view">
      <field name="name">product.template.form.inherit</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_form_view"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@name='options']/span[field[@name='purchase_ok']]" position="after">
          <span class="d-inline-flex">
            <field name="ingredient_ok"/>
            <label for="ingredient_ok"/>
          </span>
        </xpath>
      </field>
    </record>

  </data>
</odoo>
