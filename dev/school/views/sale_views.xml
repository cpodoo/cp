<odoo>
  <data>

    <record id="view_order_form_custom_inherit" model="ir.ui.view">
      <field name="name">sale.order.form.custom.inherit</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">

        <!-- Add field after customer field -->
        <xpath expr="//field[@name='partner_id']" position="after">
          <field name="x_custom_note"/>
        </xpath>

        <!-- Add button inside header -->
        <xpath expr="//header" position="inside">
          <button name="action_custom_button"
                  type="object"
                  string="Custom Action"
                  class="btn-primary"
                  icon="fa-bolt"/>
        </xpath>

      </field>
    </record>

  </data>
</odoo>