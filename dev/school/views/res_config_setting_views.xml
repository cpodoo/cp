<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="res_config_settings_form_view">
        <field name="name">res.config.settings.form.subscription</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@name='invoicing_setting_container']" position="after">
                <block title="Product RE-Rental" name="product_rental_setting_container">
                    <setting id="rent_before_delivery_reminder_days" string="Delivery Reminder Days"
                             help="It will send reminder mail before the next delivery">
                        <field name="rent_before_delivery_reminder_days" />
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>