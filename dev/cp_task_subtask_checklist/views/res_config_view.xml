<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_checklist" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.checklist</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="project.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//block[@id='tasks_management']" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box" id="checklist_settings">
                        <div class="o_setting_left_pane">
                            <field name="group_checklist_task_progress_restriction"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="group_checklist_task_progress_restriction"/>
                            <div class="text-muted">
                                Enable the ability to restrict task stage changes based on checklist completion.
                            </div>
                            <div class="content-group mt16" invisible="not group_checklist_task_progress_restriction">
                                <div class="row mt16">
                                     <label for="checklist_allow_reset_after_completed" class="col-lg-6 o_light_label"/>
                                     <field name="checklist_allow_reset_after_completed"/>
                                </div>
                                <div class="row">
                                    <label for="checklist_allow_reset_after_canceled" class="col-lg-6 o_light_label"/>
                                    <field name="checklist_allow_reset_after_canceled"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>