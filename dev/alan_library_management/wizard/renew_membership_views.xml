<odoo>
    <data>
        <record id="view_membership_renew_wizard_form" model="ir.ui.view">
            <field name="name">membership.renew.wizard.form</field>
            <field name="model">library.member.renew.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="partner_id" readonly="1"/>
                            <field name="duration" widget="radio" options="{'horizontal': true}"/>
                        </group>
                        <footer>
                            <button name="action_renew" string="Renew" type="object" class="oe_highlight"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>