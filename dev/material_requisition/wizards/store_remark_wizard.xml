<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_store_remark_wizard_form" model="ir.ui.view">
        <field name="name">store.remark.wizard.form</field>
        <field name="model">store.remark.wizard</field>
        <field name="arch" type="xml">
            <form string="Store Verified Remark">
                <group>
                    <field name="store_verified_remark" />
                </group>
                <footer>
                    <button string="Submit" type="object" name="submit_remark" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="action_store_remark_wizard" model="ir.actions.act_window">
        <field name="name">Store Verified Remark</field>
        <field name="res_model">store.remark.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>