<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- List View -->
    <record id="view_material_request_approver_list" model="ir.ui.view">
        <field name="name">material.request.approver.list</field>
        <field name="model">material.request.approver</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="approval_type" />
                <field name="no_of_approvals" />
                <field name="company_id" />
            </list>
        </field>
    </record>
    <!-- Form View -->
    <record id="view_material_request_approver_form" model="ir.ui.view">
        <field name="name">material.request.approver.form</field>
        <field name="model">material.request.approver</field>
        <field name="arch" type="xml">
            <form string="Material Request Approver">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="no_of_approvals" />
                        </group>
                        <group>
                            <field name="approval_type" />
                            <field name="company_id" />
                        </group>
                    </group>
                    <separator string="APPROVALS" />
                    <field name="approver_line_id">
                        <list editable="bottom">
                            <field name="user_id"/>
                        </list>
                    </field>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Action -->
    <record id="action_material_request_approver" model="ir.actions.act_window">
        <field name="name">Material Request Approvers</field>
        <field name="res_model">material.request.approver</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create rules for material request approvals.</p>
        </field>
    </record>
</odoo>