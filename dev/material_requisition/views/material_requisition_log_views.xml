<odoo>
    <record id="view_material_requisition_log_form" model="ir.ui.view">
        <field name="name">material.requisition.log.form</field>
        <field name="model">material.requisition.log</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="create_uid" readonly="1"/>
                        <field name="delivery_expected"/>
                    </group>
                    <notebook>
                        <page string="Product Lines">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="asset_name"/>
                                    <field name="description"/>
                                    <field name="required_qty"/>
                                    <field name="available_qty" readonly="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_material_requisition_log_tree" model="ir.ui.view">
        <field name="name">material.requisition.log.tree</field>
        <field name="model">material.requisition.log</field>
        <field name="arch" type="xml">
            <list>
                <field name="create_uid"/>
                <field name="delivery_expected"/>
            </list>
        </field>
    </record>
        <record id="action_material_requisition_log" model="ir.actions.act_window">
        <field name="name">Material Request Logs</field>
        <field name="res_model">material.requisition.log</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
