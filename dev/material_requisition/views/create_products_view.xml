<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_create_wizard_form" model="ir.ui.view">
        <field name="name">product.create.wizard.form</field>
        <field name="model">product.create.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Sample Products">
                <footer>
                    <button name="action_create_products" type="object" string="Create Products" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_product_create_wizard" model="ir.actions.act_window">
        <field name="name">Create Sample Products</field>
        <field name="res_model">product.create.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
