<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_in_patient_document">
            <t t-call="web.external_layout">
                <div class="page">
                    <div style="height: 150px;"></div>
                    <div style="margin-bottom: 20px; text-align: center;">
                        <h2 style="color: #2A3F54; font-weight: bold;">Inpatient Admission Report</h2>
                    </div>
                    <table style="width: 100%; border-collapse: collapse; font-size: 15px; margin-top: 10px;">
                        <tr>
                            <td style="border: 1px solid #000; padding: 6px; width: 50%;">
                                <strong>Patient:</strong> <span t-field="o.patient.name"/>
                            </td>
                            <td style="border: 1px solid #000; padding: 6px; width: 50%;">
                                <strong>Admission Type:</strong> <span t-field="o.addmission_type"/>
                            </td>
                        </tr>
                        <tr>
                            <td style="border: 1px solid #000; padding: 6px;">
                                <strong>Health Center:</strong> <span t-field="o.institution.name"/>
                            </td>
                            <td style="border: 1px solid #000; padding: 6px;">
                                <strong>Building:</strong> <span t-field="o.building.name"/>
                            </td>
                        </tr>
                        <tr>
                            <td style="border: 1px solid #000; padding: 6px;">
                                <strong>Ward:</strong> <span t-field="o.ward.name"/>
                            </td>
                            <td style="border: 1px solid #000; padding: 6px;">
                                <strong>Bed:</strong> <span t-field="o.bed.name"/>
                            </td>
                        </tr>
                        <tr>
                            <td style="border: 1px solid #000; padding: 6px;">
                                <strong>Hospitalization Date:</strong> <span t-field="o.hospitallization_date"/>
                            </td>
                            <td style="border: 1px solid #000; padding: 6px;">
                                <t t-if="o.discharge_date">
                                    <strong>Discharge Date:</strong> <span t-field="o.discharge_date"/>
                                </t>
                            </td>
                        </tr>
                    </table>
                </div>
            </t>
        </template>

        <template id="report_inpatient">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="cp_hospital_management.report_in_patient_document" t-lang="o.patient.lang"/>
                </t>
            </t>
        </template>

        <record id="paperformat_inpatient_admission" model="report.paperformat">
            <field name="name">Inpatient Admission</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">20</field>
            <field name="margin_bottom">20</field>
            <field name="margin_left">15</field>
            <field name="margin_right">15</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">10</field>
            <field name="dpi">96</field>
        </record>

    </data>
</odoo>
