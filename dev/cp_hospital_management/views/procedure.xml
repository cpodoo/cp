<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_doc_procedure_form" model="ir.ui.view">
	    <field name="name">Procedure</field>
	    <field name="model">procedure</field>
		<field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                                <label for="avg_time" string="Average Time"/>
                                    <div class="o_row no-gutters d-flex">
                                        <field name="avg_time" widget="float_time" class="oe_inline text-left" required="1"/>
                                        <label for="avg_time_uom_id" string="" class="oe_inline"/>
                                            <field name="avg_time_uom_id" class="oe_inline" required="1"/>
                                    </div>
                                <label for="max_time" string="Max Time"/>
                                    <div class="o_row no-gutters d-flex">
                                        <field name="max_time" widget="float_time" class="oe_inline text-left"/>
                                        <label for="max_time_uom_id" string="" class="oe_inline"/>
                                            <field name="max_time_uom_id" class="oe_inline"/>
                                    </div>
                                <label for="min_time" string="Min Time"/>
                                    <div class="o_row no-gutters d-flex">
                                        <field name="min_time" widget="float_time" class="oe_inline text-left"/>
                                        <label for="min_time_uom_id" string="" class="oe_inline"/>
                                            <field name="min_time_uom_id" class="oe_inline"/>
                                    </div>
                            <field name="doc_role_ids" widget="many2many_tags" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                            <field name="nurse_role_ids" widget="many2many_tags" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                            <field name="instrument_set_ids" widget="many2many_tags" required="1"/>
                        </group>
                        <group>
                            <label for="min_bmi" string="Min Bmi"/>
                                <div class="o_row no-gutters d-flex">
                                    <field name="min_bmi" class="oe_inline text-left"/>
                                    <label for="min_bmi_uom_id" string="" class="oe_inline"/>
                                        <field name="min_bmi_uom_id" class="oe_inline"/>
                                </div>
                            <label for="max_bmi" string="Max Bmi"/>
                                <div class="o_row no-gutters d-flex">
                                    <field name="max_bmi" class="oe_inline text-left"/>
                                    <label for="max_bmi_uom_id" string="" class="oe_inline"/>
                                        <field name="max_bmi_uom_id" class="oe_inline"/>
                                </div>
                            <field name="special_equip_ids" widget="many2many_tags"/>
                            <field name="avg_time_actual" widget="float_time" invisible="1"/>
                        </group>
                    </group>
                        <notebook>
                            <page name="operating_room" string = 'Operating Theatre'>
                                <field name="procedure_line_id">
                                    <list editable="bottom">
                                        <field name="room_id"/>
                                        <field name="centre_id"/>
                                        <field name="building_id"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                </sheet>
                <chatter/>
            </form>
		</field>
	</record>

    <record id="view_doc_procedure_list" model="ir.ui.view">
        <field name="name">Procedure</field>
        <field name="model">procedure</field>
        <field name="arch" type="xml">
            <list string="Procedure">
                <field name="name"/>
                <field name="avg_time" widget="float_time"/>
                <field name="max_time" widget="float_time"/>
                <field name="min_time" widget="float_time"/>
            </list>
        </field>
    </record>

    <record id="action_procedure_form" model="ir.actions.act_window">
		<field name="name">Procedure</field>
		<field name="res_model">procedure</field>
		<field name="view_mode">list,form</field>
	</record>

    <menuitem name="Procedure" id="menu_procedure_id" parent="menu_config_data" action="action_procedure_form" sequence="5"/>

    <record id="view_doc_procedure_lines_form" model="ir.ui.view">
	    <field name="name">Procedure lines</field>
	    <field name="model">procedure.lines</field>
		<field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="room_id"/>
                        <field name="centre_id"/>
                        <field name="building_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_doc_procedure__lines_list" model="ir.ui.view">
        <field name="name">Procedure Lines</field>
        <field name="model">procedure.lines</field>
        <field name="arch" type="xml">
            <list string="Procedure lines">
                <field name="room_id"/>
                <field name="centre_id"/>
                <field name="building_id"/>
            </list>
        </field>
    </record>
</odoo>