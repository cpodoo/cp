	<record id="view_health_center_search" model="ir.ui.view">
	    <field name="name">health.center.select</field>
	    <field name="model">health.center</field>
	    <field name="arch" type="xml">
	        <search string="Health Center">
	            <field name="name"/>
	            <field name="health_center_type"/>
	            <field name="street"/>
	            <field name="city"/>
	            <field name="state_id"/>
	            <field name="country_id"/>
	            <field name="website"/>
	            <group expand="0" name="group_by" string="Group By">
	                <filter name="health_center" string="Health Center Type"  context="{'group_by': 'health_center_type'}"/>
	            </group>
	        </search>
	    </field>
	</record>
	<record id="view_health_center_list" model="ir.ui.view">
	    <field name="name">health.center.list</field>
	    <field name="model">health.center</field>
	    <field name="arch" type="xml">
	        <list string="Health Centers">
	            <field name="name" />
	            <field name="health_center_type" />
	            <field name="street" />
	            <field name="city" />
	            <field name="state_id" can_create="true" can_write="true" />
	            <field name="country_id" can_create="true" can_write="true" />
	            <field name="website" />
	        </list>
	    </field>
	</record>
	<record id="view_health_center_form" model="ir.ui.view">
	    <field name="name">health.center.form</field>
	    <field name="model">health.center</field>
	    <field name="arch" type="xml">
	        <form string="Health Centers">
	            <sheet>
	                <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image'}"/>
	                <div class="oe_title">
	                    <h1>
	                        <field name="name" required="1" default_focus="1" placeholder="Name"/>
	                    </h1>
                        <div>
                            <field name="health_center_type" string=" Health Center" required="1" placeholder="Health Center Type" options="{'no_open': True, 'no_create': True}"/>
                        </div>
	                </div>

	                <group> 
	                    <group> 
	                        <label for="street" string="Address"/>
                            
	                        <div class="o_address_format">
	                            <field name="street" placeholder="Street..." class="o_address_street"/>
	                            <field name="street2" placeholder="Street 2..." class="o_address_street"/>
	                            <field name="city" placeholder="City" class="o_address_city"/>
	                            <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_create': True}"/>
	                            <field name="zip" placeholder="ZIP" class="o_address_zip"/>
	                            <field name="country_id" placeholder="Country" class="o_address_country" options="{'no_open': True, 'no_create': True}"/>
	                        </div>
	                        <field name="website" widget="url" placeholder="e.g. https://www.odoo.com"/>
	                    </group>
	                    <group> 
	                        <field name="phone" widget="phone"/>
	                        <field name="mobile" widget="phone"/>
	                        <field name="fax"/> 
	                        <field name="email" widget="email"/>
	                    </group>
	                </group>

	                <notebook>
	                    <page string="Extra Information" name="extra_info">
                            <field name="info" placeholder="Additional notes about the health center..."/>
	                    </page>
               
	                </notebook>
	            </sheet>
                <chatter/>
	        </form>
	    </field>
	</record>

	<record model="ir.actions.act_window" id="action_health_center">
	    <field name="name">Healthcare centers</field>
	    <field name="res_model">health.center</field>
	    <field name="view_mode">kanban,list,form</field>
	</record>
	
	<menuitem name="Healthcare centers" id="menu_health_center" parent="menu_health_centers_main" action="action_health_center" sequence="0"/>

</odoo>