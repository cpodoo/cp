	<record id="view_health_center_kanban" model="ir.ui.view">
	    <field name="name">health.center.kanban</field>
	    <field name="model">health.center</field>
	    <field name="arch" type="xml">
	        <kanban>
	            <field name="name" />
	            <field name="health_center_type" />
	            <field name="city" />
	            <field name="email" />
	            <field name="country_id" can_create="true" can_write="true" />
	            <field name="id" />
				<templates>
			        <t t-name="kanban-box">
			            <div class="oeh_medical_vignette oe_semantic_html_override d-flex flex-row">
			                <div class="oeh_medical_image me-2 flex-shrink-0">
			                    <!-- This button makes the image clickable -->
			                    <button name="open" type="open" class="oe_kanban_action p-0 border-0 bg-transparent">
			                        <img t-if="record.image" t-att-alt="record.name.value" t-att-src="kanban_image('health.center', 'image', record.id.raw_value)" class="oeh_medical_picture"/>
			                        <img t-else="" t-att-alt="record.name.value" t-att-src="'/web/static/img/placeholder.png'" class="oeh_medical_picture"/>
			                    </button>
			                </div>
			                <div class="oeh_medical_details flex-grow-1">
			                    <!-- This button makes the name clickable (optional) -->
			                     <button name="open" type="open" class="oe_kanban_action text-start p-0 border-0 bg-transparent fw-bold mb-1">
			                        <field name="name"/>
			                     </button>
			                    <ul class="m-0 p-0 list-unstyled">
			                        <!-- ... other list items ... -->
			                         <li t-if="record.health_center_type.raw_value">
			                             <field name="health_center_type"/>
			                         </li>
			                         <li t-if="record.city.raw_value and record.country_id.raw_value">
			                             <field name="city"/>, <field name="country_id"/>
			                         </li>
			                         <li t-if="record.email.raw_value">
			                             <i class="fa fa-envelope me-1" role="img" aria-label="Email" title="Email"></i>
			                             <a t-attf-href="mailto:#{record.email.raw_value}">
			                                 <field name="email"/>
			                             </a>
			                         </li>
			                    </ul>
			                </div>
			            </div>
			        </t>
			    </templates>
	            

