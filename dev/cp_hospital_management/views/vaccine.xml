<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_vaccine_search" model="ir.ui.view">
	    <field name="name">Vaccine.search</field>
	    <field name="model">vaccine</field>
	    <field name="priority" eval="8" />
	    <field name="arch" type="xml">
	        <search string="Vaccine">
	            <field name="patient"/>
	            <field name="name"/>
	            <field name="dose"/>
	            <field name="doctor"/>
	            <field name="date"/>
	            <field name="institution"/>
	            <newline />
	            <group expand="0" string="Group By...">
	                <filter name="physician" string="Physician"  context="{'group_by': 'doctor'}"/>
	                <filter name="patient" string="Patient"  context="{'group_by': 'patient'}"/>
	                <filter name="health_center" string="Health Center"  context="{'group_by': 'institution'}"/>
	            </group>
	        </search>
	    </field>
	</record>
	<record model="ir.ui.view" id="view_vaccine_list">
	    <field name="name">vaccine.list</field>
	    <field name="model">vaccine</field>
	    <field name="arch" type="xml">
	        <list string="Vaccines">
	            <field name="patient" required="1"/>
	            <field name="name" required="1"/>
	            <field name="dose" />
	            <field name="doctor" required="1"/>
	            <field name="date" required="1"/>
	            <field name="institution"/>
	        </list>
	    </field>
	</record>
	<record model="ir.ui.view" id="view_vaccine_form">
	    <field name="name">vaccine.form</field>
	    <field name="model">vaccine</field>
	    <field name="arch" type="xml">
	        <form string="Vaccines">
	            <sheet>
	                <div class="oe_left" style="width: 500px;">
	                    <div class="oe_title">
	                        <h1>
	                            <field name="patient" domain="[('is_patient','=',True)]" required="1"/>
	                        </h1>
	                        <field name="name" required="1" placeholder="Name"/>
	
	                    </div>
	                </div>
	                <group>
	                    <group>
	                        <field name="dose" />
	                        <field name="date" required="1"/>
	                    </group>
	                    <group>
	                        <field name="doctor" options="{'no_create': True}" required="1"/>
	                        <field name="institution" options="{'no_create': True}"  />
	                    </group>
	                </group>
	                <notebook>
	                    <page string="Observations">
	                        <field name="info" nolabel="1" />
	                    </page>
	                </notebook>
	            </sheet>
	            <chatter/>
	        </form>
	    </field>
	</record>
	<record model="ir.actions.act_window" id="action_vaccine">
	    <field name="name">Vaccines</field>
	    <field name="res_model">vaccine</field>
	    <field name="view_mode">list,form</field>
	</record>
	<menuitem name="Vaccines" id="menu_vaccine" parent="menu_patient_management" action="action_vaccine" sequence="3"/>

</odoo>