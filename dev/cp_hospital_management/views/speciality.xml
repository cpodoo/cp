<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_doc_speciality" model="ir.ui.view">
	    <field name="name">speciality</field>
	    <field name="model">speciality.data</field>
	    <field name="arch" type="xml">
			<form string = 'Speciality'>
				<sheet>
					<group>
						<field name="name"/>
					</group>
				</sheet>
				<chatter/>
			</form>
		</field>
	</record>

	<record id="view_specialty_data_list_view" model="ir.ui.view">
	    <field name="name">Speciality</field>
	    <field name="model">speciality.data</field>
	    <field name="arch" type="xml">
			<list string = 'Speciality'>
				<field name="name"/>
			</list>
		</field>
	</record>

	<record id="action_speciality_form" model="ir.actions.act_window">
		<field name="name">Speciality</field>
		<field name="res_model">speciality.data</field>
		<field name="view_mode">list,form</field>
	</record>
	<menuitem name="Speciality" id="menu_specs" parent="menu_config_data" action="action_speciality_form" sequence="1"/>
</odoo>