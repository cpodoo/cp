<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_preop_assesment_list" model="ir.ui.view" >
        <field name="name">preop.assesment_list</field>
        <field name="model">preop.assesment</field>
        <field name="arch" type="xml">
            <list string="Pre_Op Assesment">
                <field name="date"/>
                <field name="admission_date"/>
                <field name="procedure_id"/>
            </list>
        </field>
    </record>


    <record id="view_preop_assesment_form" model="ir.ui.view">
        <field name="name">preop.assesment_form</field>
        <field name="model">preop.assesment</field>
        <field name="arch" type="xml">
            <form string="Pre_Op Assesment">
                <sheet>
                    <group col="4">
                        <field name="date"/>
                        <field name="admission_date"/>
                        <field name="procedure_id"/>
                        <field name="procedure_date"/>
                        <field name="surgeon"/>
                        <field name="surgical_center"/>
                        <field name="anaesthesia"/>
                        <field name="stay"/>
                        <field name="id_check_by"/>
                    </group>
                    <notebook>

                        <page string="Patient Information">
                            <group>
                                <group string="Information">
                                    <!-- <field name="title"/> -->
                                    <field name="height"/>
                                    <field name="occupation"/>
                                    <label for="street" string="Address"/>
                                    <div>
                                        <field name="street" placeholder="Street..."/>
                                        <field name="street2" placeholder="Street2..."/>
                                        <div class="address_format">
                                            <field name="city" placeholder="City" style="width: 40%"/>
                                            <field name="state_id" class="oe_no_button" placeholder="Status"
                                                   style="width: 37%" options="{'no_open': True}" can_create="true"
                                                   can_write="true"/>
                                            <field name="zip" placeholder="ZIP" style="width: 20%"/>
                                        </div>
                                        <field name="country_id" placeholder="Country" class="oe_no_button"
                                               options="{'no_open': True, 'no_create': True}" can_create="true"
                                               can_write="true"/>
                                    </div>
                                    <field name="home_telephone"/>
                                    <field name="email"/>
                                </group>
                                <group string="GP Details">
                                    <field name="nhs_number"/>
                                    <field name="gp_name"/>
                                    <label for="street" string="Address"/>
                                    <div>
                                        <field name="gp_street" placeholder="Street..."/>
                                        <field name="gp_street2" placeholder="Street2..."/>
                                        <div class="address_format">
                                            <field name="gp_city" placeholder="City" style="width: 40%"/>
                                            <field name="gp_state_id" class="oe_no_button" placeholder="Status"
                                                   style="width: 37%" options="{'no_open': True}" can_create="true"
                                                   can_write="true"/>
                                            <field name="gp_zip" placeholder="ZIP" style="width: 20%"/>
                                        </div>
                                        <field name="gp_country_id" placeholder="Country" class="oe_no_button"
                                               options="{'no_open': True, 'no_create': True}" can_create="true"
                                               can_write="true"/>
                                    </div>
                                    <field name="gp_telephone"/>
                                    <field name="gp_email"/>
                                </group>
                            </group>

                            <group string="Additional Information"/>
                            <h3>If you are under the care of any other health care professional (specialist
                                doctor,ophthalmologist, or psychiatrist) please provide full details below.
                            </h3>
                            <group>
                                <group>
                                    <field name="add_name"/>
                                    <label for="street" string="Address"/>
                                    <div>
                                        <field name="add_street" placeholder="Street..."/>
                                        <field name="add_street2" placeholder="Street2..."/>
