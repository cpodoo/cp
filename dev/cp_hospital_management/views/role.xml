<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_doc_role_form" model="ir.ui.view">
	    <field name="name">Role</field>
	    <field name="model">role.data</field>
	    <field name="arch" type="xml">
			<form string = 'Role'>
				<sheet>
					<group>
						<field name="name"/>
						<field name="type" widget="selection"/>
						<field name="is_surgeon" invisible="type != 'doc'"/>
						<field name="not_available" />
					</group>
				</sheet>
				<chatter/>
			</form>
		</field>
	</record>

	<record id="view_role_data_list_view" model="ir.ui.view">
	    <field name="name">Role</field>
	    <field name="model">role.data</field>
	    <field name="arch" type="xml">
			<list string = 'Role'>
				<field name="name"/>
				<field name="type"/>
			</list>
		</field>
	</record>

	<record id="action_role_form" model="ir.actions.act_window">
		<field name="name">Role</field>
		<field name="res_model">role.data</field>
		<field name="view_mode">list,form</field>
	</record>

	<menuitem name="Role" id="menu_role" parent="menu_config_data" action="action_role_form" sequence="4"/>
</odoo>