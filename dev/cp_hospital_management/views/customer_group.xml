<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_customer_group_form_view" model="ir.ui.view">
	    <field name="name">Customer Group</field>
	    <field name="model">customer.group</field>
	    <field name="arch" type="xml">
			<form string = 'Customer Group'>
				<sheet>
					<group>
						<group>
							<field name="name"/>
						</group>
					</group>
				</sheet>
				<chatter/>
			</form>
		</field>
	</record>

	<record id="view_customer_group_list_view" model="ir.ui.view">
	    <field name="name">Customer Group</field>
	    <field name="model">customer.group</field>
	    <field name="arch" type="xml">
			<list string = 'Customer Group'>
				<field name="name"/>
			</list>
		</field>
	</record>

	<record id="action_view_customer_group" model="ir.actions.act_window">
		<field name="name">Customer Group</field>
		<field name="res_model">customer.group</field>
		<field name="view_mode">list,form</field>
	</record>

	<menuitem name="Customer Group" id="menu_customers_group" parent="menu_config_data" action="action_view_customer_group" sequence="8"/>
</odoo>