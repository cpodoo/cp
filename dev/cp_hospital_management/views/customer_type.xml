<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_customer_type_form_view" model="ir.ui.view">
	    <field name="name">Customer Type</field>
	    <field name="model">customer.type</field>
	    <field name="arch" type="xml">
			<form string = 'Customer Type'>
				<sheet>
					<group>
						<group>
							<field name="name" readonly="id"/>
						</group>
						<group>
						</group>
					</group>
				</sheet>
				<chatter/>
			</form>
		</field>
	</record>

	<record id="view_customer_type_list_view" model="ir.ui.view">
	    <field name="name">Customer Type</field>
	    <field name="model">customer.type</field>
	    <field name="arch" type="xml">
			<list string = 'Customer Type'>
				<field name="name"/>
			</list>
		</field>
	</record>

	<record id="action_view_customer_type" model="ir.actions.act_window">
		<field name="name">Customer Type</field>
		<field name="res_model">customer.type</field>
		<field name="view_mode">list,form</field>
	</record>

	<menuitem name="Customer Type" id="menu_customer_type" parent="cp_hospital_management.menu_config_data" action="action_view_customer_type" sequence="5"/>

</odoo>