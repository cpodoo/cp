<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- purchase order -->
    <template id="purchase_report_inherit_id" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//table[1]/thead/tr/th[@name='th_description']" position="after">
            <t t-if="env['ir.config_parameter'].sudo().get_param('cp_so_po_image.purchase_product_image_report')">
                <th name="image" class="text-start">Image</th>
            </t>
        </xpath>
        <xpath expr="//table[@class='o_has_total_table table o_main_table table-borderless']//thead/tr/th[@name='th_description']"
               position="before">
            <th name="num" class="text-start">No.</th>
        </xpath>
        <xpath expr="//t[@t-foreach='o.order_line']//td[@id='product']" position="after">
            <t t-if="env['ir.config_parameter'].sudo().get_param('cp_so_po_image.purchase_product_image_report')">
                <td class="text-right">
                    <img t-if="line.image_128" t-att-src="image_data_uri(line.image_128)" style="width: 90%"/>
                </td>
            </t>
        </xpath>
        <xpath expr="//t[@t-foreach='o.order_line']//td[@id='product']" position="before">
            <td>
                <span t-field="line.seq_no"/>
            </td>
        </xpath>
    </template>

    <!-- req template -->
    <template id="purchase_quotation_report_inherit_id" inherit_id="purchase.report_purchasequotation_document">
        <xpath expr="//table[1]/thead/tr/th[@name='th_description']" position="after">
            <t t-if="env['ir.config_parameter'].sudo().get_param('cp_so_po_image.purchase_product_image_report')">
                <th name="image" class="text-start">Image</th>
            </t>
            <th name="unit_price" class="text-end">Unit Price</th>
        </xpath>
        <xpath expr="//table[@class='table table-borderless']//thead/tr/th[@name='th_description']" position="before">
            <th name="num" class="text-start">No.</th>
        </xpath>
        <xpath expr="//t[@t-foreach='o.order_line']//td[@id='product']" position="after">
            <t t-if="env['ir.config_parameter'].sudo().get_param('cp_so_po_image.purchase_product_image_report')">
                <td class="text-right">
                    <img t-if="order_line.image_128" t-att-src="image_data_uri(order_line.image_128)"
                         style="width: 90%"/>
                </td>
            </t>
            <td class="text-end">
                <span t-field="order_line.price_unit"/>
            </td>
        </xpath>
        <xpath expr="//t[@t-foreach='o.order_line']//td[@id='product']" position="before">
            <td>
                <span t-field="order_line.seq_no"/>
            </td>
        </xpath>
    </template>
</odoo>